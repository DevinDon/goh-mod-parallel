{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Attach to Running Application",
      "port": 9229,
      "request": "attach",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "type": "node",
      "outputCapture": "std",
      "restart": true,
    },
    {
      "name": "Run Current TypeScript File",
      "request": "launch",
      "stopOnEntry": true,
      "sourceMaps": true,
      "sourceMapRenames": true,
      "args": [
        "--loader=ts-node/esm",
        "${file}",
      ],
      "cwd": "${workspaceFolder}",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "type": "node",
      "outputCapture": "std",
    },
  ],
}
