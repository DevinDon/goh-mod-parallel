{game_entity

  (include "/properties/standard/vehicle/armored-car-config.ext")
  (include "/properties/selection/vehicle.inc" scale(1.1))

  {Extension "panzerwerfer42.mdl"}
  (include   "panzerwerfer42.ext")
  (include   "crew-and-passenger.ext")

  {Props "tank" "halftrack" "hatch" "wheeled" "turret" "with_gun" "rocket" "nebelwerfer" "multi_board" "vision_lev06" "tractor" "tractor_heavy" "detect_spg" "artillery_minimap_medium" "c_rok_lite" "captor"}

  {PatherId "maultier"}
  {Targetclass "armoredcar"}
  {TargetSelector "tank_bullet"}

  {Able "emit_passengers_on_enemy"}

  {Extender "inventory"
    {Weapon "mgun" {mask "mountable"}}
    {Box
      {Size 12 10}
      {Weight 1000}
      {Item "repair_kit" 10}

      {Item "ammo ger-mgun api" 1500}
      {Item "weapon ger-mg42" filled {user "mgun"}}

      {Item "ammo ger-150mm-nebelwerfer-rocket he" 20}
    }
  }

  {Weaponry
    {Place "gun"
      {RestoreIKAfterAim}
      {Weapon "weapon ger-150mm-panzerwerfer-x10" filling "ammo ger-150mm-nebelwerfer-rocket he" 10}
      {Barrels 10}
      {Gunner "gunner"}
      {Charger "charger"}
      {StationaryFiring}
      {AccuracyByMotion
        {MaxLinearSpeed  7.00} ; km/h
        {ByLinearSpeed   0.25} ; km/h
        {MaxAngularSpeed 3.00} ; deg/s
        {ByAngularSpeed  0.35} ; deg/s
        {DisorderTime    1.25} ; s
        {OrderTime       9.55} ; s
      }
    }
    {Place "mgun"
      {Type "aa"}
      {Gunner "commander"}
      {Charger "commander"}
      {LinkBone "mgun"}
      {LinkAnimation "off"}
      {basic}
      {ai_in_manual}
      {AccuracyByMotion
        {MaxLinearSpeed   8.00} ; km/h
        {ByLinearSpeed    0.40} ; km/h
        {MaxAngularSpeed 30.00} ; deg/s
        {ByAngularSpeed   0.50} ; deg/s
        {DisorderTime     0.60} ; s
        {OrderTime        1.00} ; s
      }
    }
  }

  {Mass 7100}
  {Chassis "wheel"
    ("set-tank-trace" fx("tracks_sm2") step(0.2) length(0.58) boneleft("FXtraceL3") boneright("FXtraceR3"))
    ("set-car-trace" fx("tracewheel03a") step(0.09) wheelleft("wlf") wheelright("wrf") boneleft("FXtraceL1") boneright("FXtraceR1"))
    ("set-maneuverability-of-armored-car" speed(47) power(68) mass(7100) performance(1.42))
    ("set-fuel-bag" volume(225) power(68) mass(7100))
    {DisableMoveWhileFiring}
  }

  {Bone "gun_rot" ; 主炮俯仰角
    {limits -7 40} ; 下上
    {speed2 5}
  }
  {Bone "turret" ; 炮塔射界
    {speed2 15}
  }
  {Bone "mgun_a_rot2" ; 机枪俯仰角
    {limits -5 25} ; 下上
    {speed2 90}
  }
  {Bone "mgun_a_rot1" ; 机枪射界
    {limits -45 45} ; 右左
    {speed2 90}
  }

}
