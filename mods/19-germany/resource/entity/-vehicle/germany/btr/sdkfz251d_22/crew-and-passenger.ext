; 乘员及乘客
; 视角
{Sensor
  ; visor main
  {Visor "main"
    {Bone "foresight1"}
    {Vision "standard-vision-none"}
  }
  ; visor around
  {Visor "around"
    {Bone "visor1"}
    {Vision "standard-vision-none"}
  }
  ; visor driver
  {Visor "driver"
    {Bone "visor2"}
    {Vision "standard-vision-none"}
  }
  ; visor standard-visor-driver
  {Visor "standard-visor-driver"
    {Bone "visor2"}
    {Vision "standard-vehicle-vision-narrow"}
  }
  ; visor standard-visor-gunner
  {Visor "standard-visor-gunner"
    {Bone "foresight1"}
    {Vision "standard-vehicle-vision-narrow"}
  }
  ; visor standard-visor-commander
  {Visor "standard-visor-commander"
    {Bone "commander"}
    {Vision "standard-vehicle-vision-around"}
  }
}
; 动画
{Boarder
  ; animation commander
  {Anm "commander"
    {forward
      {base "board" 1}
      {begin "halftrack_commander_board" 1}
      {end "halftrack_commander_board_seat" 1}
    }
    {reverse
      {base "board" 1}
      ; no reverse animation begin
      {end "emit_sd222_driver" 1}
    }
  }
  ; animation driver
  {Anm "driver"
    {forward
      {base "board" 1}
      {begin "halftrack_driver_board" 1}
      {end "halftrack_driver_board_seat" 1}
    }
    {reverse
      {base "board" 1}
      ; no reverse animation begin
      {end "emit_sd222_driver" 1}
    }
  }
  ; animation gunner
  {Anm "gunner"
    {forward
      {base "board" 1}
      {begin "board_sd232_driver" 1}
      {end "pose_m5_gunlayer" 1}
    }
    {reverse
      {base "board" 1}
      ; no reverse animation begin
      {end "emit_sd222_driver" 1}
    }
  }
  ; animation charger
  {Anm "charger"
    {forward
      {base "board" 1}
      {begin "board_sd232_driver" 1}
      {end "pose_pdr25_charger" 1}
    }
    {reverse
      {base "board" 1}
      ; no reverse animation begin
      {end "emit_sd222_driver" 1}
    }
  }
}
; 乘员
; crew commander
{Placer
  {Place "commander"
    {group "crew"}
    {linkbone "seat1"}
    {turnoff {shadow} {sensor}}
    {visor "standard-visor-commander"}
    ; 无附加内容
  }
}
{Boarder
  {door "emit1"}
  {link "emit1" "commander" {anm "commander"} {forward putoff} {reverse puton}}
}
