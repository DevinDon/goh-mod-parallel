; 学说载具
; define from squad_vehicle2_doctrine
; args = vehicle period crew1 crew2
(define "set-standard-doctrine-vehicle"
  {level 1}
  {research_stage 1}
  {squad_cost_factor 0}
  {tags "all doctrine inf %period"}
  {button "doctrine"}
  {content "%vehicle ( mp/inf/%period/%crew1 mp/inf/%period/%crew2 )"}
)

; args = doctrine cost
(define "set-standard-doctrine-level-1"
  {charge
    {delay 300}
    {interval 60}
  }
  {group "doctrine_t1"}
  {doctrine %doctrine}
  {cost %cost}
  {score (* %cost 0.05)}
)

