; 通用载具
; define from vehicle2
; args = vehicle cost cd ci cw cp tags period crew1 crew2 group button
(define "set-standard-vehicle"
  {"%vehicle"
    {charge
      {delay %cd}
      {interval %ci}
    }
    {tags "all %tags inf %period"}
    {cost %cost}
    {group "%group"}
    {button "%button"}
    {score (* %cost 0.05)}
    {cw %cw}
    {cp %cp}
    {content "%vehicle ( mp/inf/%period/%crew1 mp/inf/%period/%crew2 )"}
    {squad_cost_factor 1}
    {round_multiple 5.0}
  }
)

