{game_entity

  (include "/properties/standard/vehicle/tank-assaultgun-config.ext")
  (include "/properties/selection/vehicle_elongated.inc" scale(1.1))

  {Extension "/entity/-vehicle/germany/tank_light/wespe/wespe.mdl"}
  (include   "/entity/-vehicle/germany/tank_light/wespe/wespe.ext")
  (include   "/entity/-vehicle/germany/tank_light/wespe/crew-and-seat.ext")

  {Props "spg" "light" "-turret" "multi_board" "vision_lev03" "muzzle_85mm_93mm_sides" "shell_eject" "open_top" "detect_spg" "artillery_minimap_medium"}

  {PatherId "panzer38"}
  {Targetclass "tank_light"}
  {TargetSelector "cannon_howitzer"}
  {Collider "tank.light"}

  {Extender "detail"
    {random 0}
    {detail1}
    {detail2}
    {detail3}
  }

  {Extender "enumerator"
    {digit_folder "ger"}
  }

  {Sensor
    {Visor "around"
      {Vision "standard-vehicle-vision-around"}
    }
  }

  {Extender "inventory"
    {Box
      {Size 10 10}
      {Weight 1000}
      {Item "repair_kit" 10}

      {Item "ammo ger-105l28 he" 29}
    }
  }

  {Weaponry
    {RestoreIKTime 2}
    {Place "gun"
      {RestoreIKAfterAim}
      {Weapon "weapon ger-105mm-lefh18-l28" filling "ammo ger-105l28 he" 1}
      {Gunner "gunner"}
      {Charger "charger"}
      {Rotate}
      {AccuracyByMotion
        {MaxLinearSpeed  7.00} ; km/h
        {ByLinearSpeed   0.25} ; km/h
        {MaxAngularSpeed 3.00} ; deg/s
        {ByAngularSpeed  0.35} ; deg/s
        {DisorderTime    0.75} ; s
        {OrderTime       2.75} ; s
      }
    }
  }

  {Mass 11000}
  {Chassis "track"
    ("set-tank-trace" fx("tracks_sm2") step(0.2) length(-0.47) boneleft("FXtraceL1") boneright("FXtraceR1"))
    ("set-maneuverability-of-tank" speed(60) power(140) mass(11000) performance(1.51))
    ("set-fuel-bag" volume(200) power(140) mass(11000))
  }

  {Bone "gun_rot"
    {limits -5 42}
    {speed2 10}
  }
  {Bone "turret"
    {limits -20 20}
    {speed2 8}
  }

}
