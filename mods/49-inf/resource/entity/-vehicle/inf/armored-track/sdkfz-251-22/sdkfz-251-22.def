{game_entity

  (include "/properties/standard/vehicle/armored-car-config.ext")
  (include "/properties/selection/vehicle.inc" scale(1.0))

  {Extension "/entity/-vehicle/germany/btr/sdkfz251d_22/sdkfz251d_22.mdl"}
  (include   "/entity/-vehicle/germany/btr/sdkfz251d_22/sdkfz251d_22.ext")
  (include   "/entity/-vehicle/germany/btr/sdkfz251d_22/crew-and-passenger.ext")

  {Props "tank" "halftrack" "wheeled" "multi_board" "turret" "with_gun" "shell_eject" "muzzle_75mm_76mm_sides" "explosion_throw_crew" "vision_lev02" "tractor" "tractor_heavy" "detect_td_light" "open_death_fx_low" "open_top"}

  {PatherId "sdkfz251"}
  {Targetclass "armoredcar"}
  {TargetSelector "tank_medium"}

  {Extender "detail"
    {random 0}
    {detail1}
    {detail2}
    {detail3}
    {detail4}
    {detail5}
    {detail8}
    {detail7}
    {detail6}
  }

  {Able "emit_passengers_on_enemy"}

  {Extender "enumerator"
    {digit_folder "np"}
  }

  {Extender "inventory"
    ; {Weapon "mgun2" {mask "mountable"}}
    {Box
      {Size 15 8}
      {Weight 1000}
      {Item "repair_kit" 10}

      {Item "ammo ger-75l43 apcbche" 16}
      {Item "ammo ger-75l43 he" 8}
    }
  }

  {Weaponry
    {Place "gun"
      {RestoreIKAfterAim}
      {Weapon "weapon ger-75mm-pak40-l46" filling "ammo ger-75l43 apcbche" 1}
      {Gunner "gunner"}
      {Charger "charger"}
      {Rotate}
      {basic}
      {ai_in_manual}
      {AccuracyByMotion
        {MaxLinearSpeed  10.00} ; km/h
        {ByLinearSpeed    0.25} ; km/h
        {MaxAngularSpeed  5.00} ; deg/s
        {ByAngularSpeed   0.35} ; deg/s
        {DisorderTime     0.35} ; s
        {OrderTime        2.25} ; s
      }
    }
  }

  {Mass 9900}
  {Chassis "wheel"
    ("set-tank-trace" fx("tracks_sm2") step(0.2) length(0.49) boneleft("FXtraceL3") boneright("FXtraceR3"))
    ("set-car-trace" fx("tracewheel03a") step(0.09) wheelleft("wlf") wheelright("wrf") boneleft("FXtraceL1") boneright("FXtraceR1"))
    ("set-maneuverability-of-armored-car" speed(52) power(100) mass(9900) performance(1.53))
    ("set-fuel-bag" volume(160) power(100) mass(9900))
  }

  {Bone "gun_rot"
    {limits -6 22}
    {speed2 4}
  }
  {Bone "turret"
    {limits -22 22}
    {speed2 14}
  }

}
