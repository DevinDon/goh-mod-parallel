{game_entity

  (include "/properties/standard/vehicle/armored-car-config.ext")
  (include "/properties/selection/vehicle.inc" scale(1.0))

  {Extension "/entity/-vehicle/germany/btr/sdkfz251d_21/sdkfz251d_21.mdl"}
  (include   "/entity/-vehicle/germany/btr/sdkfz251d_21/sdkfz251d_21.ext")
  (include   "/entity/-vehicle/germany/btr/sdkfz251d_21/crew-and-passenger.ext")

  {Props "tank" "halftrack" "wheeled" "multi_board" "turret" "with_gun" "automatic" "explosion_throw_crew" "vision_lev02" "tractor" "tractor_heavy" "detect_tank_mg" "open_death_fx_low" "open_top"}

  {PatherId "sdkfz251"}
  {Targetclass "armoredcar"}
  {TargetSelector "cannon_zenite"}

  {Extender "detail"
    {random 0}
    {detail1}
    {detail2}
    {detail3}
    {detail4}
    {detail5}
    {detail6}
  }

  {Able "emit_passengers_on_enemy"}

  {Extender "enumerator"
    {digit_folder "np"}
  }

  {Extender "inventory"
    {Weapon "mgun2" {mask "mountable"}}
    {Box
      {Size 15 12}
      {Weight 1000}
      {Item "repair_kit" 10}

      {item "ammo ger-15l84 aphe" 2250}
    }
  }

  {Weaponry
    {Place "gun"
      {RestoreIKAfterAim}
      {Weapon "ger-15mm-mg151-l84-x3" filling "ammo ger-15l84 aphe" 450}
      {Gunner "gunner"}
      {Charger "charger"}
      {Barrels 3}
      {AccuracyByMotion
        {MaxLinearSpeed  10.00} ; km/h
        {ByLinearSpeed    0.25} ; km/h
        {MaxAngularSpeed  5.00} ; deg/s
        {ByAngularSpeed   0.35} ; deg/s
        {DisorderTime     0.15} ; s
        {OrderTime        1.25} ; s
      }
    }
  }

  {Mass 8000}
  {Chassis "wheel"
    ("set-tank-trace" fx("tracks_sm2") step(0.2) length(0.49) boneleft("FXtraceL3") boneright("FXtraceR3"))
    ("set-car-trace" fx("tracewheel03a") step(0.09) wheelleft("wlf") wheelright("wrf") boneleft("FXtraceL1") boneright("FXtraceR1"))
    ("set-maneuverability-of-armored-car" speed(52) power(100) mass(8000) performance(1.53))
    ("set-fuel-bag" volume(160) power(100) mass(8000))
  }

  {Bone "gun_rot"
    {limits -5 49}
    {speed2 60}
  }
  {Bone "turret"
    {speed2 60}
  }

}
