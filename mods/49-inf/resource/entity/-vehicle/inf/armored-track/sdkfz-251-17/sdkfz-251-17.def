{game_entity

  (include "/properties/standard/vehicle/armored-car-config.ext")
  (include "/properties/selection/vehicle.inc" scale(1.0))

  {Extension "/entity/-vehicle/germany/btr/sdkfz251d_17/sdkfz251d_17.mdl"}
  (include   "/entity/-vehicle/germany/btr/sdkfz251d_17/sdkfz251d_17.ext")
  (include   "/entity/-vehicle/germany/btr/sdkfz251d_17/crew-and-passenger.ext")

  {Props "tank" "halftrack" "wheeled" "multi_board" "with_gun" "muzzle_20mm_25mm_auto" "automatic" "explosion_throw_crew" "vision_lev02" "tractor" "tractor_heavy" "detect_tank_mg" "open_death_fx_low" "open_top"}

  {PatherId "sdkfz251"}
  {Targetclass "armoredcar"}
  {TargetSelector "tank_zenite"}

  {Extender "detail"
    {random 0}
    {detail1}
    {detail2}
    {detail3}
    {detail4}
    {detail5}
    {detail8}
    {detail11}
    {detail13}
    {detail14}
    {detail15}
    {detail6}
    {detail7}
    {detail10}
    {detail9}
  }

  {Able "emit_passengers_on_enemy"}

  {Extender "enumerator"
    {digit_folder "np"}
  }

  {Extender "inventory"
    {Weapon "mgun2" {mask "mountable"}}
    {Box
      {Size 15 6}
      {Weight 1000}
      {Item "repair_kit" 10}

      {Item "ammo inf-15mm-chain ap" 600}
      {Item "weapon inf-infantry-heavy-machine-gun" filling "ammo inf-15mm-chain ap" 120 {user "mgun2"}}

      {Item "ammo ger-20l55 ap" 300}
      {Item "ammo ger-20l55 he" 300}
    }
  }

  {Weaponry
    {Place "gun"
      {RestoreIKAfterAim}
      {Weapon "weapon ger-20mm-kwk38-l55" filling "ammo ger-20l55 ap" 10}
      {Gunner "gunner"}
      {Charger "charger"}
      {AccuracyByMotion
        {MaxLinearSpeed  10.00} ; km/h
        {ByLinearSpeed    0.25} ; km/h
        {MaxAngularSpeed  5.00} ; deg/s
        {ByAngularSpeed   0.35} ; deg/s
        {DisorderTime     0.15} ; s
        {OrderTime        2.25} ; s
      }
    }
    {Place "mgun2"
      {type "rear"}
      {Gunner "charger"}
      {Charger "charger"}
      {LinkBone "mgun2"}
      {LinkAnimation "off"}
      {basic}
      {ai_in_manual}
      {AccuracyByMotion
        {MaxLinearSpeed   8.00} ; km/h
        {ByLinearSpeed    0.40} ; km/h
        {MaxAngularSpeed 30.00} ; deg/s
        {ByAngularSpeed   0.50} ; deg/s
        {DisorderTime     0.60} ; s
        {OrderTime        1.00} ; s
      }
    }
  }

  {Mass 8800}
  {Chassis "wheel"
    ("set-tank-trace" fx("tracks_sm2") step(0.2) length(0.49) boneleft("FXtraceL3") boneright("FXtraceR3"))
    ("set-car-trace" fx("tracewheel03a") step(0.09) wheelleft("wlf") wheelright("wrf") boneleft("FXtraceL1") boneright("FXtraceR1"))
    ("set-maneuverability-of-armored-car" speed(53) power(100) mass(8800) performance(1.47))
    ("set-fuel-bag" volume(160) power(100) mass(8800))
  }

  {Bone "gun_rot"
    {limits -10 60}
    {speed2 20}
  }
  {Bone "turret"
    {speed2 25}
  }

  {Bone "mgun_a2_rot1" ; 机枪射界
    {speed2 60}
    {limits -20 45} ; 右左
  }
  {Bone "mgun_a2_rot2" ; 机枪俯仰角
    {speed2 60}
    {limits -90 0} ; 俯仰角不是从 0 开始的，需要 + 75 度
  }

}
