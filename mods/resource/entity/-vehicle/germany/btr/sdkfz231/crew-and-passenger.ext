; crew and passenger

; set visors
{Sensor
  ; visor main
  {Visor "main"
    {Bone "foresight1"}
    {Vision "standard-vision-none"}
  }
  ; visor around
  {Visor "around"
    {Bone "visor1"}
    {Vision "standard-vision-none"}
  }
  ; visor driver
  {Visor "driver"
    {Bone "visor2"}
    {Vision "standard-vision-none"}
  }
  ; visor standard-visor-driver
  {Visor "standard-visor-driver"
    {Bone "visor2"}
    {Vision "standard-vehicle-vision-narrow"}
  }
  ; visor standard-visor-gunner
  {Visor "standard-visor-gunner"
    {Bone "foresight1"}
    {Vision "standard-vehicle-vision-narrow"}
  }
  ; visor standard-visor-commander
  {Visor "standard-visor-commander"
    {Bone "visor1"}
    {Vision "standard-vehicle-vision-around"}
  }
}

; set animations
{Boarder
  ; animation left
  {Anm "left"
    {forward
      {base "" 1}
      {begin "board_sd222_driver" 1}
      ; no forward animation end
    }
    {reverse
      {base "" -1}
      ; no reverse animation begin
      {end "emit_sd222_driver" 1}
    }
  }
  ; animation right
  {Anm "right"
    {forward
      {base "" 1}
      {begin "board_sd222_driver" 1}
      ; no forward animation end
    }
    {reverse
      {base "" -1}
      ; no reverse animation begin
      {end "emit_sd222_driver" 1}
    }
  }
}

; set crews
; crew commander
{Placer
  {Place "commander"
    {group "crew"}
    ; no bone
    {turnoff {shadow} {sensor} {targetable}}
    {visor "standard-visor-commander"}
    ; no extra
  }
}
{Boarder
  {door "emit1"}
  {link "emit1" "commander" {anm "left"} {forward putoff} {reverse puton}}
  {door "emit2"}
  {link "emit2" "commander" {anm "right"} {forward putoff} {reverse puton}}
}
