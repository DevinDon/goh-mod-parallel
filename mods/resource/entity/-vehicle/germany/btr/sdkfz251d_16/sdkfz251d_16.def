{game_entity

  (include "/properties/standard/vehicle/armored-car-config.ext")
  (include "/properties/selection/vehicle.inc" scale(1.0))

  {Extension "sdkfz251d_16.mdl"}
  (include   "sdkfz251d_16.ext")
  (include   "crew-and-passenger.ext")

  {Props "flame" "tank" "halftrack" "wheeled" "multi_board" "explosion_throw_crew" "vision_lev02" "tractor" "tractor_heavy" "detect_tank_mg" "open_death_fx_low"}

  {PatherId "sdkfz251"}
  {Targetclass "armoredcar"}
  {TargetSelector "tank_bullet"}

  {Extender "detail"
    {random 0}
    {detail1}
    {detail2}
    {detail3}
    {detail6}
    {detail7}
    {detail8}
    {detail10}
  }

  {Able "emit_passengers_on_enemy"}

  {Extender "enumerator"
    {digit_folder "np"}
  }

  {Extender "inventory"
    {Weapon "mgun" {mask "mountable"}}
    {Box
      {Size 15 6}
      {Weight 1000}
      {Item "repair_kit" 10}

      {Item "ammo ger-mgun api" 3250}
      {Item "weapon ger-mg42" filled {user "mgun"}}

      {Item "ammo ger-fuel ic" 700}
    }
  }

  {Weaponry
    {Place "mgun"
      {Type "main"}
      {Gunner "gunner2"}
      {Charger "gunner2"}
      {LinkBone "mgun"}
      {LinkAnimation "off"}
      {basic}
      {ai_in_manual}
      {AccuracyByMotion
        {MaxLinearSpeed   8.00} ; km/h
        {ByLinearSpeed    0.40} ; km/h
        {MaxAngularSpeed 30.00} ; deg/s
        {ByAngularSpeed   0.50} ; deg/s
        {DisorderTime     0.60} ; s
        {OrderTime        1.00} ; s
      }
    }
    {Place "gun"
      {Type "left_flamer"}
      {Weapon "weapon ger-14mm-flammenwerfer-left" filled}
      {Foresight "foresight1"}
      {Gunner "gunner"}
      {Charger "gunner"}
      {basic}
      {ai_in_manual}
    }
    {Place "gun1"
      {Type "right_flamer"}
      {Weapon "weapon ger-14mm-flammenwerfer-right" filled}
      {Foresight "foresight2"}
      {Gunner "gunner1"}
      {Charger "gunner1"}
      {basic}
      {ai_in_manual}
    }
  }

  {Mass 8620}
  {Chassis "wheel"
    ("set-tank-trace" fx("tracks_sm2") step(0.2) length(0.49) boneleft("FXtraceL3") boneright("FXtraceR3"))
    ("set-car-trace" fx("tracewheel03a") step(0.09) wheelleft("wlf") wheelright("wrf") boneleft("FXtraceL1") boneright("FXtraceR1"))
    ("set-maneuverability-of-armored-car" speed(53) power(100) mass(8620) performance(1.48))
    ("set-fuel-bag" volume(160) power(100) mass(8620))
  }

  {Bone "mgun_a_rot1"
    {speed2 60}
  }
  {Bone "mgun_a_rot2"
    {speed2 60}
  }

  {Bone "mgun_a2_rot1"
    {speed2 60}
  }
  {Bone "mgun_a2_rot2"
    {speed2 60}
  }

  {Bone "mgun_a3_rot1"
    {speed2 60}
  }
  {Bone "mgun_a3_rot2"
    {speed2 60}
  }

  {Bone "mgun_a4_rot1"
    {speed2 60}
  }
  {Bone "mgun_a4_rot2"
    {speed2 60}
  }

}
