{game_entity

  (include "/properties/standard/vehicle/tank-assaultgun-config.ext")
  (include "/properties/selection/vehicle_elongated.inc" scale(1.15))

  {Extension "nashorn.mdl"}
  (include   "nashorn.ext")
  (include   "crew-and-passenger.ext")

  {Props "td" "medium" "-turret" "multi_board" "vision_lev04" "muzzle_85mm_93mm_sides" "shell_eject" "open_top"}

  {PatherId "nashorn"}
  {Targetclass "tank_medium"}
  {TargetSelector "tank_heavy"}

  {Extender "enumerator"
    {digit_folder "ger"}
  }

  {Extender "shield" {on}}

  {Extender "inventory"
    {Box
      {Size 12 10}
      {Weight 1000}
      {Item "repair_kit" 10}

      {Item "ammo ger-88l71 apcbche" 19}
      {Item "ammo ger-88l71 apcr" 5}
      {Item "ammo ger-88l71 he" 19}
    }
  }

  {Weaponry
    {RestoreIKTime 2}
    {place "gun"
      {RestoreIKAfterAim}
      {Weapon "weapon ger-88mm-pak43-l71" filling "ammo ger-88l71 apcbche" 1}
      {Gunner "gunner"}
      {Charger "charger gunner3" MinWorkers 1}
      {AccuracyByMotion
        {MaxLinearSpeed  7.00} ; km/h
        {ByLinearSpeed   0.25} ; km/h
        {MaxAngularSpeed 3.00} ; deg/s
        {ByAngularSpeed  0.35} ; deg/s
        {DisorderTime    0.25} ; s
        {OrderTime       2.00} ; s
      }
    }
  }

  {Mass 24000}
  {Chassis "track"
    ("set-tank-trace" fx("tracks_mid") step(0.2) length(-0.52) boneleft("FXtraceL1") boneright("FXtraceR1"))
    ("set-maneuverability-of-tank" speed(40) power(265) mass(24000) performance(1.18))
    ("set-fuel-bag" volume(600) power(265) mass(24000))
  }

  {Bone "gun_rot"
    {limits -5 20}
    {speed2 8}
  }
  {Bone "turret"
    {limits -15 15}
    {speed2 8}
  }

}
