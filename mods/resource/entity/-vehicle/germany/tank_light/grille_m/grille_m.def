{game_entity

  (include "/properties/standard/vehicle/tank-assaultgun-config.ext")
  (include "/properties/selection/vehicle_elongated.inc" scale(1.1))

  {Extension "grille_m.mdl"}
  (include   "grille_m.ext")
  (include   "crew-and-seat.ext")

  {Props "td" "light" "-turret" "mantlet" "vision_lev02" "muzzle_37mm_40mm_auto_sides" "shield" "open_top" "detect_tank_light"}

  {PatherId "panzer38"}
  {Targetclass "tank_light"}
  {TargetSelector "tank_zenite"}
  {Collider "tank.light"}

  {Extender "detail"
    {random 0}
    {detail1}
    {detail2}
    {detail6}
    {detail7}
    {detail3}
    {detail4}
    {detail5}
  }

  {Extender "enumerator"
    {digit_folder "ger"}
  }

  {Sensor
    {Visor "around"
      {Vision "standard-vehicle-vision-around"}
    }
  }

  {Extender "inventory"
    {Box
      {Size 10 7}
      {Weight 1000}
      {Item "repair_kit" 10}

      {Item "ammo ger-30l38 apcr" 320}
      {Item "ammo ger-30l38 he"   320}
    }
  }

  {Weaponry
    {RestoreIKTime 2}
    {Place "gun"
      {RestoreIKAfterAim}
      {Weapon "weapon ger-30mm-mk103-l38" filling "ammo ger-30l38 apcr" 80}
      {Gunner "gunner"}
      {Charger "commander"}
      {Rotate}
      {AccuracyByMotion
        {MaxLinearSpeed  7.00} ; km/h
        {ByLinearSpeed   0.25} ; km/h
        {MaxAngularSpeed 3.00} ; deg/s
        {ByAngularSpeed  0.35} ; deg/s
        {DisorderTime    0.25} ; s
        {OrderTime       2.00} ; s
      }
    }
  }

  {Mass 11000}
  {Chassis "track"
    ("set-tank-trace" fx("tracks_sm2") step(0.2) length(0.55) boneleft("FXtraceL1") boneright("FXtraceR1"))
    ("set-maneuverability-of-tank" speed(47) power(150) mass(11000) performance(1.38))
    ("set-fuel-bag" volume(218) power(150) mass(11000))
  }

  {Bone "gun_rot"
    {limits -10 60}
    {speed2 10}
  }
  {Bone "turret"
    {limits -8 8}
    {speed2 8}
  }

}
