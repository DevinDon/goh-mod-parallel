; standard mgun ammo define

; args = calibre
(define "api"
  {damage fire
    {radius (* %calibre 0.010)}
    {heating (* %calibre 0.010)}
    {time (* %calibre 0.010)}
  }
  {damage blastwave
    {energy (* %calibre 0.15)}
    {area (* %calibre 0.015) (* %calibre 0.017)}
    {ground_interaction_radius 0.015} ; 该值与 area 的第二个参数相乘，以确定爆炸距离地面是否足够近，从而触发地形效果
  }
)
