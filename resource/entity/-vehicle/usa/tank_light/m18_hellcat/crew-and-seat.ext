; define seat_human
; args = place bone door animation
(define "set-seat"
  {placer
    {place "%place" {group "passenger"} {LinkBone "%bone"}}
  }
  {boarder
    {door "%door"}
    {link "%door" "%place" {anm "%animation"} {forward putoff} {reverse puton}}
  }
)

; apply settings
("set-driver-crew"  door(emit0)      door2(emit2) door3(emit3))
("set-visable-crew" place(gunner)    door(emit2)  door2(emit3) visor(main)               animationLeft(gunner_l)  animationRight(gunner_r))
("set-visable-crew" place(charger)   door(emit2)  door2(emit3) visor(around)             animationLeft(charger_l) animationRight(charger_r))
("set-visable-crew-2" place(charger2)  door(emit2)  door2(emit3) animationLeft(charger2_l) animationRight(charger2_r))
("set-commander-driver-crew" place(commander) door(emit1) door2(emit2) door3(emit3))

("set-seat" place(seat1) bone(seat01) door(emit4) animation(armor1))
("set-seat" place(seat2) bone(seat02) door(emit5) animation(armor1))
("set-seat" place(seat3) bone(seat03) door(emit6) animation(armor1))
("set-seat" place(seat4) bone(seat04) door(emit7) animation(armor1))
