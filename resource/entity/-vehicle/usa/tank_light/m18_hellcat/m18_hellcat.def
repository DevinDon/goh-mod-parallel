{game_entity

  (include "/properties/standard/vehicle/tank-config.ext")
  (include "/properties/selection/vehicle.inc" scale(1.0))

  {Extension "m18_hellcat.mdl"}
  (include   "m18_hellcat.ext")
  (include   "crew-and-seat.ext")

  {Props "td" "light" "vision_lev03" "muzzle_75mm_76mm_sides" "shell_eject" "open_top" "detect_tank_light" "tractor" "tractor_light" "muzzle_hmg_m2hb"}

  {PatherId "m18_gmc"}
  {Targetclass "tank_light"}
  {TargetSelector "tank_medium"}
  {Collider "tank.light"}

  {Boarder
    {anm "driver"
      {forward {begin "board_tank_left"} {base "open_driver"}}
      {reverse {end "emit_tank_1_hold"} {base "open_driver"}}
    }
    {anm "co_driver"
      {forward {begin "board_tank_right"} {base "open_co_driver"}}
      {reverse {end "emit_tank_1_hold"} {base "open_co_driver"}}
    }
    {anm "left"
      {forward {begin "board_tank_left"}}
      {reverse {end "emit_tank_1_hold"}}
    }
    {anm "right"
      {forward {begin "board_tank_right"}}
      {reverse {end "emit_tank_1_hold"}}
    }
    {anm "gunner_l"
      {forward {begin "board_tank_left"} {end "seat_m18_gunner"}}
      {reverse {end "emit_tank_1_hold"}}
    }
    {anm "gunner_r"
      {forward {begin "board_tank_right"} {end "seat_m18_gunner"}}
      {reverse {end "emit_tank_1_hold"}}
    }
    {anm "charger_l"
      {forward {begin "board_tank_left"} {end "seat_m18_charger"}}
      {reverse {end "emit_tank_1_hold"}}
    }
    {anm "charger_r"
      {forward {begin "board_tank_right"} {end "seat_m18_charger"}}
      {reverse {end "emit_tank_1_hold"}}
    }
    {anm "charger2_l"
      {forward {begin "board_tank_left"} {end "seat_m18_commander"}}
      {reverse {end "emit_tank_1_hold"}}
    }
    {anm "charger2_r"
      {forward {begin "board_tank_right"} {end "seat_m18_commander"}}
      {reverse {end "emit_tank_1_hold"}}
    }
    {anm "armor1"
      {forward {begin "board_MiddleArmor"} {end "pose_seat_armor_1"}}
      {reverse {end "emit_tank_1"}}
    }
  }

  {Sensor
    {Visor "around"
      {Vision "standard-vision-around"}
    }
  }

  {Extender "shield" {on}}

  {Extender "inventory"
    {Weapon "mgun1" {mask "mountable"}}
    {Box
      {Size 12 8}
      {Weight 1000}
      {Item "repair_kit" 10}

      {Item "weapon usa-browning-m2" filled {user "mgun1"}}
      {Item "ammo usa-hmgun" 900}
      {Item "ammo usa-76x539 apcbche" 29}
      {Item "ammo usa-76x539 he" 9}
      {Item "ammo usa-76x539 hvap" 3}
      {Item "ammo usa-76x539 wp" 3}
    }
  }

  {Weaponry
    {RestoreIKTime 5}
    {Place "gun"
      {RestoreIKAfterAim}
      {Weapon "weapon usa-76mm-m1a2" filling "ammo usa-76x539 apcbche" 1}
      {Gunner "gunner"}
      {Charger "charger"}
      {AccuracyByMotion
        {MaxLinearSpeed  7.00} ; km/h
        {ByLinearSpeed   0.25} ; km/h
        {MaxAngularSpeed 3.00} ; deg/s
        {ByAngularSpeed  0.35} ; deg/s
        {DisorderTime    0.35} ; s
        {OrderTime       4.00} ; s
      }
    }
    {Place "mgun1"
      {Type "coaxial"}
      {Gunner "charger"}
      {Charger "charger"}
      {LinkBone "mgun3"}
      {LinkAnimation "off"}
      {ai_in_manual}
      {Basic}
      {AccuracyByMotion
        {MaxLinearSpeed   8.00} ; km/h
        {ByLinearSpeed    0.40} ; km/h
        {MaxAngularSpeed 30.00} ; deg/s
        {ByAngularSpeed   0.50} ; deg/s
        {DisorderTime     0.60} ; s
        {OrderTime        1.00} ; s
      }
    }
    {Place "mgun"
      {Type "aa"}
      {Weapon "weapon usa-browning-m2" filled}
      {Gunner "charger2"}
      {Charger "charger2"}
      {LinkBone "mgun"}
      {LinkAnimation "off"}
      {ai_in_manual}
      {Basic}
      {AccuracyByMotion
        {MaxLinearSpeed   8.00} ; km/h
        {ByLinearSpeed    0.40} ; km/h
        {MaxAngularSpeed 30.00} ; deg/s
        {ByAngularSpeed   0.50} ; deg/s
        {DisorderTime     0.60} ; s
        {OrderTime        1.00} ; s
      }
    }
  }

  {Mass 17690}
  {Chassis "track"
    ("set-tank-trace" fx("tracks_sm2") step(0.15) length(0.64) boneleft("FXtraceL1") boneright("FXtraceR1"))
    ("set-maneuverability-of-tank" speed(80) power(400) mass(17690) performance(1.32))
    ("set-fuel-bag" volume(620) power(400))
  }

  {Bone "gun_rot"
    {limits -10 20}
    {speed2 6}
  }
  {Bone "turret"
    {speed2 16}
  }
  {Bone "mgun_a_rot1"
    {speed2 30}
  }
  {Bone "mgun_a_rot2"
    {limits -13 85}
    {speed2 60}
  }
  {Bone "mgun_1_rot1"
    {limits -15 15}
    {speed2 60}
  }
  {Bone "mgun_1_rot2"
    {limits -10 30}
    {speed2 60}
  }

}
