{game_entity

  (include "/properties/standard/vehicle/tank-config.ext")
  (include "/properties/selection/vehicle_small.inc" scale(0.9))

  {Extension "/entity/-vehicle/germany/special/sdkfz303b/sdkfz303b.mdl"}

  {Props "armored_car" "vision_lev00" "tank" "detect_tank_light"}

  {PatherId "goliath"}
  {Targetclass "car"}
  {TargetSelector "tank_light"}
  {Collider "car"}

  {volume "body1"
    {thickness 10}
  }
  {volume "body2"
    {thickness 10}
  }
  {volume "engine"
    {thickness 2}
  }

  ("set-basic-durability" body(111) engine(111) turret(100) mantlet(100) gun(100) track(111) ammo(111))
  ("set-basic-armor"      ammo(30))

  ("set-body"                 repair(10))
  ("set-engine"               repair(10))
  ("set-tracks" thickness(5)  repair(10))

  ; set visors
  {Sensor
    ; visor main
    {Visor "main"
      {Bone "foresight1"}
      {Vision "standard-vision-none"}
    }
    ; visor around
    {Visor "around"
      {Bone "visor1"}
      {Vision "standard-vision-none"}
    }
    ; visor driver
    {Visor "driver"
      {Bone "visor2"}
      {Vision "standard-vision-none"}
    }
    ; visor noise
    {Visor "standard-visor-hearing"
      {Bone "hearing"}
      {Vision "standard-vision-none"}
    }
    ; visor radar
    {Visor "standard-visor-radar"
      {Bone "radar"}
      {Vision "standard-vision-short-range-radar-detection"}
    }
  }

  {Placer
    {Crew 0}
    {Place "driver" remove}
  }

  {Extender "inventory"
    {Weapon "mgun" {mask "mountable"}}
    {Box
      {Size 8 4}
      {Weight 1000}
      {Item "repair_kit" 10}

      {Item "weapon ger-30mm-mk108-l19" filling "ammo ger-30l38 he" 100 {user "mgun"}}
      {Item "ammo ger-30l38 he" 300}
    }
  }

  {Weaponry
    {Place "explosive"
      {Weapon "weapon goliath" filling "ammo goliath 100kg" 1}
      {Gunner "driver"}
      {Charger "driver"}
      {Rotate}
    }
    {Place "mgun"
      {Type "aa"}
      {Foresight "foresight1"}
      {Gunner "driver"}
      {Charger "driver"}
      {LinkBone "mgunrot"}
      {LinkAnimation "off"}
      {basic}
      {ai_in_manual}
      {AccuracyByMotion
        {MaxLinearSpeed   8.00} ; km/h
        {ByLinearSpeed    0.40} ; km/h
        {MaxAngularSpeed 30.00} ; deg/s
        {ByAngularSpeed   0.50} ; deg/s
        {DisorderTime     0.60} ; s
        {OrderTime        1.00} ; s
      }
    }
  }

  {Mass 365}
  {Chassis "track"
    ("set-tank-trace" fx("tracks_sm2") step(0.3) length(0.28) boneleft("FXtraceL1") boneright("FXtraceR1"))
    ("set-maneuverability-of-tank" speed(60) power(30) mass(365) performance(1.9))
    ("set-fuel-bag" volume(10) power(30) mass(365))
  }

  {Skeleton
    {Bone revolute "mgun"
      {Limits} ; - 左 + 右
      {Position 0 0 12.7} ; - 后 + 前, - 左 + 右, - 下 + 上
      {Orientation ; 水平旋转
        1    0    0
        0    1    0
        0    0    1
      }
      {Bone revolute "mgunrot"
        {Limits -10 30} ; - 俯角 + 仰角
        {Position 0 0 0}
        {Orientation ; 垂直旋转，用于正确绑定骨骼
          1    0    0
          0    0    1
          0    1    0
        }
      }
    }
  }

  {Bone "gun_rot"
    {speed2 360}
  }
  {Bone "turret"
    {speed2 360}
  }

}
