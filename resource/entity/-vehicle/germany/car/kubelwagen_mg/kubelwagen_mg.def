{game_entity

  (include "/properties/standard/vehicle/car-config.ext")
  (include "/properties/selection/vehicle_elongated.inc" scale(0.80))
  (include "/properties/resupply.inc")

  {Extension "kubelwagen_mg.mdl"}
  (include   "kubelwagen_mg.ext")
  (include   "crew-and-passenger.ext")

  {Props "vision_lev01" "explosion_throw_crew"}

  {PatherId "kubel"}

  {Extender "enumerator"
    {digit_folder "np"}
  }

  {Able "emit_on_attack"}

  {Extender "inventory"
    {Weapon "mgun" {mask "mountable"}}
    {Box
      {Size 7 5}
      {Weight 500}
      {Item "repair_kit" 5}

      {Item "weapon ger-mg42" filled {user "mgun"}}
      {Item "ammo ger-mgun api" 900}
    }
  }

  {Weaponry
    ; {RestoreIKTime 5}
    {Place "mgun"
      {Type "main"}
      {Charger "gunner"}
      {LinkBone "mgun"}
      {LinkAnimation "off"}
      {Basic}
      {AccuracyByMotion
        {MaxLinearSpeed   8.00} ; km/h
        {ByLinearSpeed    0.40} ; km/h
        {MaxAngularSpeed 30.00} ; deg/s
        {ByAngularSpeed   0.50} ; deg/s
        {DisorderTime     0.60} ; s
        {OrderTime        1.00} ; s
      }
    }
  }

  {Mass 715}
  {Chassis "wheel"
    ("set-car-trace" fx("tracewheel03") step(0.08) wheelleft("wlf") wheelright("wrf") boneleft("FXtraceL1") boneright("FXtraceR1"))
    ("set-car-trace" fx("tracewheel03") step(0.08) wheelleft("wlr") wheelright("wrr") boneleft("FXtraceL2") boneright("FXtraceR2"))
    ("set-maneuverability-of-car" speed(90) power(25) mass(715) performance(1.51))
    ("set-fuel-bag" volume(60) power(25) mass(715))
  }

  {Bone "front_mgun"
    {speed2 60}
  }
  {Bone "front_mgun1"
    {speed2 60}
  }

}
