{game_entity

  (include "/properties/standard/vehicle/moto-config.ext")
  (include "/properties/selection/vehicle_small.inc" scale(1.0))
  (include "/properties/resupply.inc")

  {Extension "bmw_r71.mdl"}
  (include   "bmw_r71.ext")
  (include   "crew-and-passenger.ext")

  {Props "vision_lev01"}

  {PatherId "moto"}
  {TargetSelector "car_bullet"}

  {Extender "detail"
    {random 0}
    {detail1}
    {detail2}
  }

  {Able "emit_on_attack"}

  {Extender "inventory"
    {Weapon "mgun" {mask "mountable"}}
    {Box
      {Size 7 6}
      {Weight 100}
      {Item "repair_kit" 1}

      {Item "ammo ger-mgun" 500}
      {Item "weapon ger-mg42" filled {user "mgun"}}
    }
  }

  {Weaponry
    {RestoreIKTime 10}
    {Place "mgun"
      {Type "main"}
      {Charger "gunner"}
      {LinkBone "mgun"}
      {LinkAnimation "off"}
      {Basic}
      {AccuracyByMotion
        {MaxLinearSpeed   8.00} ; km/h
        {ByLinearSpeed    0.40} ; km/h
        {MaxAngularSpeed 30.00} ; deg/s
        {ByAngularSpeed   0.50} ; deg/s
        {DisorderTime     0.60} ; s
        {OrderTime        1.00} ; s
      }
    }
  }

  {Mass 397}
  {Chassis "wheel"
    ("set-car-trace" fx("tracewheel03a") step(0.08) wheelleft("wlf") wheelright("wrf") boneleft("FXtraceL1") boneright("FXtraceR1"))
    ("set-car-trace" fx("tracewheel03a") step(0.08) wheelleft("wlr") wheelright("wrr") boneleft("FXtraceL2") boneright("FXtraceR2"))
    ("set-maneuverability-of-car" speed(120) power(22) mass(397) performance(1.75))
    ("set-fuel-bag" volume(14) power(22) mass(397))
  }

  {Bone "mgun_rot1"
    {limits -60 60}
    {speed2 60}
  }
  {Bone "mgun_rot2"
    {limits -15 45}
    {speed2 60}
  }

}
