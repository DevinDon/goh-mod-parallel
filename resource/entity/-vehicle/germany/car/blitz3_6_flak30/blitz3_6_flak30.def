{game_entity

  (include "/properties/standard/vehicle/car-config.ext")
  (include "/properties/selection/vehicle_elongated.inc" scale(1.15))

  {Extension "blitz3_6_flak30.mdl"}
  {Extension "crew-and-seat.ext"}

  {Props "turret" "with_gun" "open_top" "automatic" "multi_board" "truck" "vision_lev02" "muzzle_20mm_25mm_auto" "tractor" "tractor_heavy" "detect_tank_light"}

  {PatherId "blitz36"}
  {TargetSelector "tank_zenite"}
  {Collider "truck"}

  {Able "emit_on_attack"}

  ("set-basic-durability" body(200) engine(80) turret(100) mantlet(100) gun(150) track(100) ammo(100))
  ("set-basic-armor"      ammo(10))
  ("set-car-thickness"    body(3) engine(5))

  ("set-bodyback"             repair(20))
  ("set-turret"               repair(10))
  ("set-mantlet"              repair(10))
  ("set-gun"    thickness(15) repair(20))
  ("set-body"                 repair(20))
  ("set-engine"               repair(20))
  ("set-tracks" thickness(10) repair(15))

  ("set-wheel" name("wheelright1"))
  ("set-wheel" name("wheelleft1"))
  ("set-wheel" name("wheelright2"))
  ("set-wheel" name("wheelleft2"))

  ("set-glass" name("glassr"))
  ("set-glass" name("glassl"))
  ("set-glass" name("glass"))

  ("set-wood" name("bodyback1"))
  ("set-wood" name("bodyback2"))
  ("set-wood" name("bodyback3"))
  ("set-wood" name("bodyback4"))
  ("set-wood" name("bodyback5"))

  ("set-internal-components" name("fuel")  type("fuel") repair(3))
  ("set-internal-components" name("transmission") type("transmission") repair(10))

  {volume "body6" {able {holed}}}
  {volume "fuel" {able {NoWoundDecal 0}}}
  {volume "transmission" {able {NoWoundDecal 0}}}
  {volume "turret" {thickness 8} {able {holed}}}
  {volume "turret2" {thickness 8}}

  {Extender "inventory"
    {Box
      {Size 9 9}
      {Weight 2000}
      {Item "repair_kit" 10}

      {Item "ammo ger-20l55 ap" 100}
      {Item "ammo ger-20l55 he" 280}
    }
  }

  {Weaponry
    {RestoreIKTime 10}
    {Place "gun"
      {Weapon "weapon ger-20mm-flak30-l65" filling "ammo ger-20l55 he" 20}
      {AccuracyByMotion
        {MaxLinearSpeed  10.00} ; km/h
        {ByLinearSpeed    0.25} ; km/h
        {MaxAngularSpeed  5.00} ; deg/s
        {ByAngularSpeed   0.35} ; deg/s
        {DisorderTime     0.35} ; s
        {OrderTime        2.95} ; s
      }
    }
  }

  {Mass 3200}
  {Chassis "wheel"
    ("set-car-trace" fx("tracewheel03")  step(0.08) wheelleft("wlf") wheelright("wrf") boneleft("FXtraceL1") boneright("FXtraceR1"))
    ("set-car-trace" fx("tracewheel03d") step(0.08) wheelleft("wlr") wheelright("wrr") boneleft("FXtraceL2") boneright("FXtraceR2"))
    ("set-maneuverability-of-armored-car" speed(80) power(68) mass(3200) performance(1.35))
    ("set-fuel-bag" volume(80) power(68))
  }

  {Bone "gun_rot"
    {limits -5 88}
    {speed2 60}
  }
  {Bone "turret"
    ; {limits -145 145}
    {speed2 60}
  }

}
