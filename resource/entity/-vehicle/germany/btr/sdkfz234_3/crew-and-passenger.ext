    {group "crew"}
    {linkbone "commander"}
    {turnoff {shadow} {sensor} {targetable 1}}
    {visor "standard-visor-commander"}
    ; no extra
  }
}
{Boarder
  {door "emit1"}
  {link "emit1" "commander" {anm "commander"} {forward putoff} {reverse puton}}
