; crew and passenger

; set visors
{Sensor
  ; visor main
  {Visor "main"
    {Bone "foresight1"}
    {Vision "standard-vision-none"}
  }
  ; visor around
  {Visor "around"
    {Bone "visor1"}
    {Vision "standard-vision-none"}
  }
  ; visor driver
  {Visor "driver"
    {Bone "visor2"}
    {Vision "standard-vision-none"}
  }
  ; visor standard-visor-driver
  {Visor "standard-visor-driver"
    {Bone "visor2"}
    {Vision "standard-vision-narrow"}
  }
  ; visor standard-visor-gunner
  {Visor "standard-visor-gunner"
    {Bone "foresight1"}
    {Vision "standard-vision-narrow"}
  }
  ; visor standard-visor-commander
  {Visor "standard-visor-commander"
    {Bone "visor1"}
    {Vision "standard-vision-around"}
  }
}

; set animations
{Boarder
  ; animation driver
  {Anm "driver"
    {forward
      ; no forward animation base
      {begin "board_sd222_driver" 1}
      {end "seat_sdkfz234_driver" 1}
    }
    {reverse
      ; no reverse animation base
      ; no reverse animation begin
      {end "emit_sd222_driver" 1}
    }
  }
  ; animation gunner
  {Anm "gunner"
    {forward
      ; no forward animation base
      {begin "board_sd222_driver" 1}
      {end "seat_sdkfz2343_gunner" 1}
    }
    {reverse
      ; no reverse animation base
      ; no reverse animation begin
      {end "emit_sd222_driver" 1}
    }
  }
  ; animation commander
  {Anm "commander"
    {forward
      ; no forward animation base
      {begin "board_sd222_driver" 1}
      {end "seat_sdkfz2343_commander" 1}
    }
    {reverse
      ; no reverse animation base
      ; no reverse animation begin
      {end "emit_sd222_driver" 1}
    }
  }
  ; animation charger
  {Anm "charger"
    {forward
      ; no forward animation base
      {begin "board_sd222_driver" 1}
      {end "seat_sdkfz2343_charger" 1}
    }
    {reverse
      ; no reverse animation base
      ; no reverse animation begin
      {end "emit_sd222_driver" 1}
    }
  }
}

; set crews
; crew driver
{Placer
  {Place "driver"
    {group "crew"}
    {linkbone "driver"}
    {turnoff {shadow} {sensor} {targetable}}
    {visor "standard-visor-driver"}
    ; no extra
  }
}
{Boarder
  {door "emit1"}
  {link "emit1" "driver" {anm "driver"} {forward putoff} {reverse puton}}
  {door "emit2"}
  {link "emit2" "driver" {anm "driver"} {forward putoff} {reverse puton}}
}
; crew gunner
{Placer
  {Place "gunner"
    {group "crew"}
    {linkbone "gunner"}
    {turnoff {shadow} {sensor} {targetable 1}}
    {visor "standard-visor-gunner"}
    ; no extra
  }
}
{Boarder
  {door "emit1"}
  {link "emit1" "gunner" {anm "gunner"} {forward putoff} {reverse puton}}
  {door "emit2"}
  {link "emit2" "gunner" {anm "gunner"} {forward putoff} {reverse puton}}
}
