{game_entity

  (include "/properties/standard/vehicle/armored-car-config.ext")
  (include "/properties/selection/vehicle.inc" scale(1.1))

  {Extension "sdkfz231.mdl"}
  (include   "sdkfz231.ext")
  (include   "crew-and-seat.ext")

  {Props "tank" "turret" "wheeled" "8_wheels" "with_gun" "vision_lev02" "muzzle_20mm_25mm_auto"}

  {PatherId "sdkfz232"}
  {Targetclass "armoredcar"}
  {TargetSelector "tank_light"}

  {Boarder
    {anm "left"
      {forward {begin "board_sd222_driver"} {base ""}}
      {reverse {end "emit_sd222_driver"} {base "" -1}}
    }
    {anm "right"
      {forward {begin "board_sd222_driver"} {base ""}}
      {reverse {end "emit_sd222_driver"} {base "" -1}}
    }
  }

  {Extender "enumerator"
    {digit_folder "np"}
  }

  {Sensor
    {Visor "main"
      {Vision "standard-vision-narrow"}
    }
  }

  {Extender "shield" {on}}

  {Extender "inventory"
    {Box
      {Size 12 5}
      {Weight 1000}
      {Item "repair_kit" 10}

      {Item "ammo ger-mgun" 1900}

      {Item "ammo ger-20l55 ap" 80}
      {Item "ammo ger-20l55 apcr" 20}
      {Item "ammo ger-20l55 he" 100}
    }
  }

  {Weaponry
    {Place "gun"
      {RestoreIKAfterAim}
      {Weapon "weapon ger-20mm-kwk30-l55" filling "ammo ger-20l55 ap" 10}
      {Gunner "gunner"}
      {Charger "charger"}
      {AccuracyByMotion
        {MaxLinearSpeed  10.00} ; km/h
        {ByLinearSpeed    0.25} ; km/h
        {MaxAngularSpeed  5.00} ; deg/s
        {ByAngularSpeed   0.35} ; deg/s
        {DisorderTime     0.25} ; s
        {OrderTime        3.00} ; s
      }
    }
    {Place "mgun2"
      {Type "coaxial"}
      {Weapon "weapon ger-mg42" filled}
      {Foresight "foresight5"}
      {Gunner "gunner"}
      {Charger "charger"}
      {Basic}
      {ai_in_manual}
      {AccuracyByMotion
        {MaxLinearSpeed   8.00} ; km/h
        {ByLinearSpeed    0.40} ; km/h
        {MaxAngularSpeed 30.00} ; deg/s
        {ByAngularSpeed   0.50} ; deg/s
        {DisorderTime     0.60} ; s
        {OrderTime        1.00} ; s
      }
    }
  }

  {Mass 8300}
  {Chassis "wheel"
    ("set-car-trace" fx("tracewheel03") step(0.08) wheelleft("wlf") wheelright("wrf") boneleft("FXtraceL1") boneright("FXtraceR1"))
    ("set-car-trace" fx("tracewheel03") step(0.08) wheelleft("wlr") wheelright("wrr") boneleft("FXtraceL2") boneright("FXtraceR2"))
    ("set-maneuverability-of-armored-car" speed(85) power(180) mass(7890) performance(1.3))
    ("set-fuel-tank" volume(180) power(180))
  }

  {Bone "gun_rot"
    {limits -10 20}
    {speed2 15}
  }
  {Bone "turret"
    {speed2 30}
  }

}
