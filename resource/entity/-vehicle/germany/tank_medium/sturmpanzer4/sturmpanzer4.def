{game_entity

  (include "/properties/standard/vehicle/tank-assaultgun-config.ext")
  (include "/properties/selection/vehicle.inc" scale(1.2))

  {Extension "sturmpanzer4.mdl"}
  (include   "sturmpanzer4.ext")
  (include   "crew-and-seat.ext")

  {Props "spg" "medium" "-turret" "mantlet" "vision_lev05" "muzzle_122mm_128mm" "shield" "detect_spg"}

  {PatherId "tiger"}
  {Targetclass "tank_medium"}
  {TargetSelector "supergun"}
  {Collider "tank.heavy"}

  {Extender "detail"
    {random 0}
    {detail1}
    {detail2}
    {detail3}
    {detail4}
    {detail5}
  }

  {Extender "enumerator"
    {digit_folder "ger"}
  }

  {Sensor
    {Visor "main"
      {Bone "visor1"}
    }
    {Visor "around"
      {Bone "visor"}
    }
  }

  {Extender "shield" {on}}

  {Extender "inventory"
    {Weapon "mgun" {mask "mountable"}}
    {Box
      {Size 8 15}
      {Weight 1000}
      {Item "repair_kit" 10}

      {Item "ammo ger-mgun" 2900}
      {Item "weapon ger-mg42" filled {user "mgun"}}

      {Item "ammo ger-150l12 heat"  2}
      {Item "ammo ger-150l12 he"   15}
    }
  }

  {Weaponry
    {RestoreIKTime 2}
    {Place "gun"
      {RestoreIKAfterAim}
      {Weapon "weapon ger-150mm-stuh43-l12" filling "ammo ger-150l12 he" 1}
      {Gunner "gunner"}
      {Charger "charger2"}
      {AccuracyByMotion
        {MaxLinearSpeed  7.00} ; km/h
        {ByLinearSpeed   0.25} ; km/h
        {MaxAngularSpeed 3.00} ; deg/s
        {ByAngularSpeed  0.35} ; deg/s
        {DisorderTime    0.95} ; s
        {OrderTime       8.75} ; s
      }
    }
    {Place "mgun"
      {Type "aa"}
      {Gunner "charger"}
      {Charger "charger"}
      {LinkBone "mgun_rot"}
      {LinkAnimation "off"}
      {Basic}
      {ai_in_manual}
      {Rotate}
      {AccuracyByMotion
        {MaxLinearSpeed   8.00} ; km/h
        {ByLinearSpeed    0.40} ; km/h
        {MaxAngularSpeed 30.00} ; deg/s
        {ByAngularSpeed   0.50} ; deg/s
        {DisorderTime     0.60} ; s
        {OrderTime        1.00} ; s
      }
    }
  }

  {Mass 65000}
  {Chassis "track"
    ("set-tank-trace" fx("tracks_big") step(0.47) length(0.82) boneleft("FXtraceL1") boneright("FXtraceR1"))
    ("set-maneuverability-of-tank" speed(35) power(440) mass(65000) performance(1.24))
    ("set-fuel-bag" volume(470) power(440) mass(65000))
  }

  {Bone "gun_rot"
    {limits -8 30}
    {speed2 6}
  }
  {Bone "turret"
    {limits -15 15}
    {speed2 8}
  }

}
