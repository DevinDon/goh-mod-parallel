{game_entity

  (include "/properties/standard/vehicle/tank-config.ext")
  (include "/properties/selection/vehicle.inc" scale(1.1))

  {Extension "ostwind.mdl"}
  (include   "ostwind.ext")
  (include   "crew-and-seat.ext")

  {Props "medium" "vision_lev04" "muzzle_37mm_40mm_auto" "shell_eject" "open_top" "shield"}

  {PatherId "panzer3"}
  {Targetclass "tank_medium"}
  {TargetSelector "tank_zenite"}

  {Extender "enumerator"
    {digit_folder "ger"}
  }

  {Sensor
    {Visor "around"
      {Vision "standard-vision-around"}
    }
  }

  {Extender "shield" {on}}

  {Extender "inventory"
    {Box
      {Size 10 10}
      {Weight 1000}
      {Item "repair_kit" 10}

      {Item "ammo ger-mgun" 1200}

      {Item "ammo ger-37l87 ap" 200}
      {Item "ammo ger-37l87 he" 200}
    }
  }

  {Weaponry
    {RestoreIKTime 5}
    {Place "gun"
      {RestoreIKAfterAim}
      {Weapon "weapon ger-37mm-flak43-l57" filling "ammo ger-37l87 he" 16}
      {Gunner "gunner"}
      {Charger "charger"}
      {AccuracyByMotion
        {MaxLinearSpeed  7.00} ; km/h
        {ByLinearSpeed   0.25} ; km/h
        {MaxAngularSpeed 3.00} ; deg/s
        {ByAngularSpeed  0.35} ; deg/s
        {DisorderTime    0.24} ; s
        {OrderTime       1.95} ; s
      }
    }
    {Place "mgun1"
      {Type "hull"}
      {Weapon "weapon ger-mg42" filled}
      {Foresight "foresight4"}
      {Gunner "gunner3"}
      {Charger "gunner3"}
      {Basic}
      {ai_in_manual}
      {AccuracyByMotion
        {MaxLinearSpeed   8.00} ; km/h
        {ByLinearSpeed    0.40} ; km/h
        {MaxAngularSpeed 30.00} ; deg/s
        {ByAngularSpeed   0.50} ; deg/s
        {DisorderTime     0.60} ; s
        {OrderTime        1.00} ; s
      }
    }
  }

  {Mass 22000}
  {Chassis "track"
    ("set-tank-trace" fx("tracks_mid") step(0.52) length(0.45) boneleft("FXtraceL1") boneright("FXtraceR1"))
    ("set-maneuverability-of-tank" speed(42) power(265) mass(22000) performance(1.38))
    ("set-fuel-bag" volume(470) power(265))
  }

  {Bone "gun_rot"
    {limits -10 88}
    {speed2 50}
  }
  {Bone "turret"
    {speed2 40}
  }

}
