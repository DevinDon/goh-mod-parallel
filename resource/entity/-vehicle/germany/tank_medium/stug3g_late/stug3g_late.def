{game_entity

  (include "/properties/standard/vehicle/tank-assaultgun-config.ext")
  (include "/properties/selection/vehicle.inc" scale(1.1))

  {Extension "stug3g_late.mdl"}
  (include   "stug3g_late.ext")
  (include   "crew-and-seat.ext")

  {Props "td" "medium" "-turret" "mantlet" "vision_lev03" "muzzle_75mm_76mm_sides" "shield"}

  {PatherId "panzer3"}
  {Targetclass "tank_medium"}
  {TargetSelector "tank_medium"}

  {Boarder
    {anm "left"
      {forward  {begin  "board_tank_left"} {end "pose_mgun_pz6"}}
      {reverse   {end  "emit_tank_1"}}
    }
    {anm "right"
      {forward  {begin  "board_tank_left"} {end "pose_mgun_pz6"}}
      {reverse   {end  "emit_tank_2_hold"}}
    }
    {anm "armor"
      {forward  {begin  "board_MiddleArmor"}   {end "pose_seat_armor_2"}}
      {reverse   {end  "emit_tank_1"}}
    }
    {anm "armor1"
      {forward  {begin  "board_MiddleArmor"} {end "pose_seat_armor_1"}}
      {reverse   {end  "emit_tank_1"}}
    }
    {anm "armor2"
      {forward  {begin  "board_lowArmor"} {end "pose_seat_armor_1"}}
      {reverse   {end  "emit_tank_1"}}
    }
  }

  {Extender "enumerator"
    {digit_folder "ger"}
  }

  {Sensor
    {Visor "main"
      {Bone "visor1"}
    }
    {Visor "around"
      {Bone "visor"}
    }
  }

  {Extender "detail"
    {random 0}
    {detail1}
    {detail2}
    {detail3}
    {detail4}
    {detail5}
    {detail111}
    {detail112}
  }

  {Extender "shield" {on}}

  {Extender "inventory"
    {Weapon "mgun" {mask "mountable"}}
    {Box
      {Size 12 9}
      {Weight 1000}
      {Item "repair_kit" 10}

      {Item "ammo ger-mgun" 4500}
      {Item "weapon ger-mg42" filled {user "mgun"}}

      {Item "ammo ger-75l43 apcbche" 29}
      {Item "ammo ger-75l43 apcr" 5}
      {Item "ammo ger-75l43 heat" 9}
      {Item "ammo ger-75l43 he" 19}
    }
  }

  {Weaponry
    {RestoreIKTime 5}
    {Place "gun"
      {RestoreIKAfterAim}
      {Weapon "weapon ger-75mm-stuk40-l48" filling "ammo ger-75l43 apcbche" 1}
      {Gunner "gunner"}
      {Charger "charger"}
      {AccuracyByMotion
        {MaxLinearSpeed  7.00} ; km/h
        {ByLinearSpeed   0.25} ; km/h
        {MaxAngularSpeed 3.00} ; deg/s
        {ByAngularSpeed  0.35} ; deg/s
        {DisorderTime    0.25} ; s
        {OrderTime       2.00} ; s
      }
    }
    {Place "mgun2"
      {Type "coaxial"}
      {Weapon "weapon ger-mg42" filled}
      {foresight "foresight5"}
      {Gunner "commander"}
      {Charger "commander"}
      {Basic}
      {AccuracyByMotion
        {MaxLinearSpeed   8.00} ; km/h
        {ByLinearSpeed    0.40} ; km/h
        {MaxAngularSpeed 30.00} ; deg/s
        {ByAngularSpeed   0.50} ; deg/s
        {DisorderTime     0.60} ; s
        {OrderTime        1.00} ; s
      }
    }
    {Place "mgun"
      {Type "aa"}
      {Gunner "charger"}
      {Charger "charger"}
      {LinkBone "mgun_rot"}
      {LinkAnimation "off"}
      {Basic}
      {ai_in_manual}
      {AccuracyByMotion
        {MaxLinearSpeed   8.00} ; km/h
        {ByLinearSpeed    0.40} ; km/h
        {MaxAngularSpeed 30.00} ; deg/s
        {ByAngularSpeed   0.50} ; deg/s
        {DisorderTime     0.60} ; s
        {OrderTime        1.00} ; s
      }
    }
  }

  {Mass 23900}
  {Chassis "track"
    ("set-tank-trace" fx("tracks_mid") step(0.52) length(1.05) boneleft("FXtraceL1") boneright("FXtraceR1"))
    ("set-maneuverability-of-tank" speed(40) power(265) mass(23900) performance(1.33))
    ("set-fuel-bag" volume(310) power(265))
  }

  {Bone "gun_rot"
    {limits -8 20}
    {speed2 6}
  }
  {Bone "turret"
    {limits -12 12}
    {speed2 8}
  }

}
