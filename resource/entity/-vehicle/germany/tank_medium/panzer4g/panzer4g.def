{game_entity

  (include "/properties/standard/vehicle/tank-config.ext")
  (include "/properties/selection/vehicle.inc" scale(1.2))

  {Extension "panzer4g.mdl"}
  (include   "panzer4g.ext")
  (include   "crew-and-seat.ext")

  {Props "medium" "vision_lev04" "muzzle_75mm_76mm_sides" "shield"}

  {PatherId "panzer3"}
  {Targetclass "tank_medium"}
  {TargetSelector "tank_medium"}

  {Extender "enumerator"
    {digit_folder "ger"}
  }

  {Boarder
    {anm "driver"
      {forward  {begin  "board_pz4_driver"} {end "seat_commander_hatch"} {base "open_driver"}}
      {reverse   {end  "board_pz4_driver" -1} {base "open_driver" -1}}
    }
    {anm "left"
      {forward  {begin  "board_cromwell"} {end "seat_commander_hatch"}}
      {reverse   {end  "board_cromwell" -1}}
    }
    {anm "right"
      {forward  {begin  "board_cromwell"} {end "seat_commander_hatch"}}
      {reverse   {end  "board_cromwell" -1}}
    }
    {anm "armor"
      {forward  {begin  "board_MiddleArmor"} {end "pose_seat_armor_1"}}
      {reverse   {end  "emit_tank_1"}}
    }
    {anm "armor1"
      {forward  {begin  "board_MiddleArmor"} {end "pose_seat_armor_2"}}
      {reverse   {end  "emit_tank_1"}}
    }
    {anm "armor2"
      {forward  {begin  "board_lowArmor"} {end "seat_crew_cannon1"}}
      {reverse   {end  "emit_tank_1"}}
    }
  }

  {Extender "detail"
    {random 0}
    {detail1}
    {detail2}
    {detail3}
    {detail4}
    {detail5}
    {detail6}
    {detail7}
    {detail8}
    {detail9}
    {detail10}
    {detail11}
  }

  {Extender "shield" {on}}

  {Extender "inventory"
    {Box
      {Size 12 10}
      {Weight 1000}
      {Item "repair_kit" 10}

      {Item "ammo ger-mgun" 4500}

      {Item "ammo ger-75l43 apcbche" 49}
      {Item "ammo ger-75l43 apcr" 5}
      {Item "ammo ger-75l43 heat" 9}
      {Item "ammo ger-75l43 he" 49}
    }
  }

  {Weaponry
    {RestoreIKTime 7}
    {Place "gun"
      {RestoreIKAfterAim}
      {Weapon "weapon ger-75mm-kwk40-l43" filling "ammo ger-75l43 apcbche" 1}
      {Gunner "gunner"}
      {Charger "charger"}
      {AccuracyByMotion
        {MaxLinearSpeed  7.00} ; km/h
        {ByLinearSpeed   0.25} ; km/h
        {MaxAngularSpeed 3.00} ; deg/s
        {ByAngularSpeed  0.35} ; deg/s
        {DisorderTime    0.25} ; s
        {OrderTime       2.00} ; s
      }
    }
    {Place "mgun2"
      {Type "coaxial"}
      {Weapon "weapon ger-mg42" filled}
      {Foresight "foresight5"}
      {Gunner "gunner"}
      {Charger "charger"}
      {Basic}
      {ai_in_manual}
      {AccuracyByMotion
        {MaxLinearSpeed   8.00} ; km/h
        {ByLinearSpeed    0.40} ; km/h
        {MaxAngularSpeed 30.00} ; deg/s
        {ByAngularSpeed   0.50} ; deg/s
        {DisorderTime     0.60} ; s
        {OrderTime        1.00} ; s
      }
    }
    {Place "mgun1"
      {Type "hull"}
      {Weapon "weapon ger-mg42" filled}
      {Foresight "foresight4"}
      {Gunner "gunner3"}
      {Charger "gunner3"}
      {Basic}
      {ai_in_manual}
      {AccuracyByMotion
        {MaxLinearSpeed   8.00} ; km/h
        {ByLinearSpeed    0.40} ; km/h
        {MaxAngularSpeed 30.00} ; deg/s
        {ByAngularSpeed   0.50} ; deg/s
        {DisorderTime     0.60} ; s
        {OrderTime        1.00} ; s
      }
    }
    {##Place "mgun"
      {Type "commander"}
      {Weapon "commander_vision"}
      {Foresight "vision_rot"}
      {Gunner "commander"}
      {Basic}
      {ai_in_manual}
    }
  }

  {Mass 23600}
  {Chassis "track"
    ("set-tank-trace" fx("tracks_mid") step(0.52) length(0.45) boneleft("FXtraceL1") boneright("FXtraceR1"))
    ("set-maneuverability-of-tank" speed(40) power(265) mass(23600) performance(1.36))
    ("set-fuel-tank" volume(470) power(265))
  }

  {Bone "gun_rot"
    {limits -10 20}
    {speed2 5}
  }
  {Bone "turret"
    {speed2 18}
  }
  {##Bone "commander_rot"
    {speed2 180}
  }

}
