{game_entity

  (include "/properties/standard/vehicle/tank-assaultgun-config.ext")
  (include "/properties/selection/vehicle.inc" scale(1.1))

  {Extension "hetzer.mdl"}
  (include   "hetzer.ext")
  (include   "crew-and-seat.ext")

  {Props "td" "light" "-turret" "mantlet" "vision_lev03" "muzzle_75mm_76mm" "shield" "detect_td_light"}

  {PatherId "panzer38"}
  {Targetclass "tank_medium"}
  {TargetSelector "tank_medium"}
  {Collider "tank.light"}

  {Extender "detail"
    {random 0}
    {detail1}
    {detail5}
  }

  {Extender "enumerator"
    {digit_folder "ger"}
  }

  {Sensor
    {Visor "main"
      {Bone "visor1"}
    }
    {Visor "around"
      {Vision "none"}
      {Bone "visor"}
    }
    {Visor "top"
      {Vision "standard-vision-around"}
      {Bone "mgun"}
    }
  }

  {Extender "shield" {on}}

  {Extender "inventory"
    {Weapon "mgun" {mask "mountable"}}
    {Box
      {Size 12 8}
      {Weight 1000}
      {Item "repair_kit" 10}

      {Item "ammo ger-mgun" 4500}
      {Item "weapon ger-mg42" filled {user "mgun"}}

      {Item "ammo ger-75l43 apcbche" 19}
      {Item "ammo ger-75l43 apcr" 5}
      {Item "ammo ger-75l43 heat" 9}
      {Item "ammo ger-75l43 he" 19}
    }
  }

  {Weaponry
    {RestoreIKTime 5}
    {Place "gun"
      {RestoreIKAfterAim}
      {Weapon "weapon ger-75mm-pak39-l48" filling "ammo ger-75l43 apcbche" 1}
      {Gunner "gunner"}
      {Charger "charger"}
      {AccuracyByMotion
        {MaxLinearSpeed  7.00} ; km/h
        {ByLinearSpeed   0.25} ; km/h
        {MaxAngularSpeed 3.00} ; deg/s
        {ByAngularSpeed  0.35} ; deg/s
        {DisorderTime    0.25} ; s
        {OrderTime       2.00} ; s
      }
    }
    {Place "mgun"
      {Type "aa"}
      {Gunner "commander"}
      {Charger "commander"}
      {LinkBone "mgun"}
      {LinkAnimation "off"}
      {Basic}
      {ai_in_manual}
      {AccuracyByMotion
        {MaxLinearSpeed   8.00} ; km/h
        {ByLinearSpeed    0.40} ; km/h
        {MaxAngularSpeed 30.00} ; deg/s
        {ByAngularSpeed   0.50} ; deg/s
        {DisorderTime     0.60} ; s
        {OrderTime        1.00} ; s
      }
    }
  }

  {Mass 16000}
  {Chassis "track"
    ("set-tank-trace" fx("tracks_mid") step(0.47) length(-0.45) boneleft("FXtraceL1") boneright("FXtraceR1"))
    ("set-maneuverability-of-tank" speed(40) power(150) mass(16000) performance(1.25))
    ("set-fuel-bag" volume(320) power(150))
  }

  {Bone "gun_rot"
    {limits -6 10}
    {speed2 8}
  }
  {Bone "turret"
    {limits -5 11}
    {speed2 8}
  }

}
