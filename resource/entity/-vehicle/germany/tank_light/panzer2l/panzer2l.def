{game_entity

  (include "/properties/standard/vehicle/tank-config.ext")
  (include "/properties/selection/vehicle.inc" scale(1.0))

  {Extension "panzer2l.mdl"}
  (include   "panzer2l.ext")
  (include   "crew-and-seat.ext")

  {Props "light" "vision_lev03" "muzzle_20mm_25mm_auto" "shield" "smoke" "nwg" "detect_tank_light"}

  {PatherId "panzer2l"}
  {Targetclass "tank_light"}
  {TargetSelector "tank_zenite"}
  {Collider "tank.light"}

  {Boarder
    {anm "left"
      {forward {begin "board_Kv"}}
      {reverse {end "emit_tank_1_hold"}}
    }
    {anm "right"
      {forward {begin "board_tank_right"} {end "seat_m7_com"}}
      {reverse {end "emit_tank_1_hold"}}
    }
    {anm "armor"
      {forward {begin "board_MiddleArmor"} {end "pose_seat_armor_1"}}
      {reverse {end "emit_tank_1"}}
    }
  }

  {Extender "detail"
    {random 0}
    {detail1}
    {detail2}
    {detail3}
    {detail4}
    {detail5}
    {detail6}
    {detail9}
  }

  {Extender "enumerator"
    {digit_folder "ger2"}
  }

  {Sensor
    {Visor "main"
      {Vision "standard-vision-wide"}
    }
  }

  {Extender "shield" {on}}

  {Extender "smokescreen"
    {cooldown 10}
    {itemTags "grenade nbks"}
  }

  {Extender "inventory"
    {Box
      {Size 12 5}
      {Weight 1000}
      {Item "repair_kit" 10}

      {Item "ammo ger-mgun" 1900}

      {Item "nbks grenade" 2}

      {Item "ammo ger-20l55 apcr" 100}
      {Item "ammo ger-20l55 he"   300}
    }
  }

  {Weaponry
    {RestoreIKTime 9}
    {Place "gun"
      {RestoreIKAfterAim}
      {Weapon "weapon ger-20mm-kwk30-l55" filling "ammo ger-20l55 apcr" 10}
      {Gunner "gunner"}
      {Charger "charger"}
      {AccuracyByMotion
        {MaxLinearSpeed  10.00} ; km/h
        {ByLinearSpeed    0.25} ; km/h
        {MaxAngularSpeed  5.00} ; deg/s
        {ByAngularSpeed   0.35} ; deg/s
        {DisorderTime     0.20} ; s
        {OrderTime        2.25} ; s
      }
    }
    {Place "mgun"
      {Type "coaxial"}
      {Weapon "weapon ger-mg42" filled}
      {Foresight "foresight3"}
      {Gunner "gunner"}
      {Charger "charger"}
      {Basic}
      {AccuracyByMotion
        {MaxLinearSpeed   8.00} ; km/h
        {ByLinearSpeed    0.40} ; km/h
        {MaxAngularSpeed 30.00} ; deg/s
        {ByAngularSpeed   0.50} ; deg/s
        {DisorderTime     0.60} ; s
        {OrderTime        1.00} ; s
      }
    }
  }

  {Mass 11800}
  {Chassis "track"
    ("set-tank-trace" fx("tracks_sm2") step(0.2) length(0.76) boneleft("FXtraceL1") boneright("FXtraceR1"))
    ("set-maneuverability-of-tank" speed(60) power(180) mass(11800) performance(1.75))
    ("set-fuel-tank" volume(235) power(180))
  }

  {Bone "gun_rot"
    {limits -10 20}
    {speed2 15}
  }
  {Bone "turret"
    {speed2 10}
  }

}
