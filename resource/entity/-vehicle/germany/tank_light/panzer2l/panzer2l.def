{game_entity

  (include "/properties/standard/vehicle/tank-config.ext")
  (include "/properties/selection/vehicle.inc" scale(1.0))

  {Extension "panzer2l.mdl"}
  (include   "panzer2l.ext")
  (include   "crew-and-passenger.ext")

  {Props "light" "vision_lev03" "muzzle_20mm_25mm_auto" "shield" "smoke" "nwg" "detect_tank_light"}

  {PatherId "panzer2l"}
  {Targetclass "tank_light"}
  {TargetSelector "tank_zenite"}
  {Collider "tank.light"}

  {Extender "detail"
    {random 0}
    {detail1}
    {detail2}
    {detail3}
    {detail4}
    {detail5}
    {detail6}
    {detail9}
  }

  {Extender "enumerator"
    {digit_folder "ger2"}
  }

  {Extender "shield" {on}}

  {Extender "smokescreen"
    {cooldown 10}
    {itemTags "grenade nbks"}
  }

  {Extender "inventory"
    {Box
      {Size 12 5}
      {Weight 1000}
      {Item "repair_kit" 10}

      {Item "nbks grenade" 3}

      {Item "ammo ger-mgun api" 1750}

      {Item "ammo ger-30l38 aphe" 400}
    }
  }

  {Weaponry
    {RestoreIKTime 2}
    {Place "gun"
      {RestoreIKAfterAim}
      {Weapon "weapon ger-30mm-mk103-l38" filling "ammo ger-30l38 aphe" 80}
      {Gunner "gunner"}
      {Charger "charger"}
      {ai_in_manual}
      {AccuracyByMotion
        {MaxLinearSpeed  10.00} ; km/h
        {ByLinearSpeed    0.25} ; km/h
        {MaxAngularSpeed  5.00} ; deg/s
        {ByAngularSpeed   0.35} ; deg/s
        {DisorderTime     0.75} ; s
        {OrderTime        2.25} ; s
      }
    }
    {Place "mgun"
      {RestoreIKAfterAim}
      {Type "coaxial"}
      {Weapon "weapon ger-mg42" filled}
      {Foresight "foresight3"}
      {Gunner "gunner"}
      {Charger "charger"}
      {Basic}
      {ai_in_manual}
      {AccuracyByMotion
        {MaxLinearSpeed   8.00} ; km/h
        {ByLinearSpeed    0.40} ; km/h
        {MaxAngularSpeed 30.00} ; deg/s
        {ByAngularSpeed   0.50} ; deg/s
        {DisorderTime     0.75} ; s
        {OrderTime        1.00} ; s
      }
    }
  }

  {Mass 11700}
  {Chassis "track"
    ("set-tank-trace" fx("tracks_sm2") step(0.2) length(0.76) boneleft("FXtraceL1") boneright("FXtraceR1"))
    ("set-maneuverability-of-tank" speed(60) power(360) mass(11700) performance(1.45))
    ("set-fuel-bag" volume(200) power(360) mass(11700))
  }

  {Bone "gun_rot"
    {limits -10 20}
    {speed2 20}
  }
  {Bone "turret"
    {speed2 20}
  }

}
