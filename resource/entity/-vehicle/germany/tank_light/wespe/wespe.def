{game_entity

  (include "/properties/standard/vehicle/tank-assaultgun-config.ext")
  (include "/properties/selection/vehicle_elongated.inc" scale(1.1))

  {Extension "wespe.mdl"}
  (include   "wespe.ext")
  (include   "crew-and-seat.ext")

  {Props "spg" "light" "-turret" "multi_board" "vision_lev03" "muzzle_85mm_93mm_sides" "shell_eject" "open_top" "detect_spg" "artillery_minimap_medium"}

  {PatherId "panzer38"}
  {Targetclass "tank_light"}
  {TargetSelector "cannon_howitzer"}
  {Collider "tank.light"}

  {Boarder
    {anm "driver"
      {forward {begin "board_pz4_driver"} {end "pose_t26_driver"} {base "open_driver"}}
      {reverse {end "board_pz4_driver" -1} {base "open_driver" -1}}
    }
    {anm "left"
      {forward {begin "board_tank_left"} {end "seat_armor"} {base "board"}}
      {reverse {end "emit_tank_1"}{base "board"}}
    }
    {anm "right"
      {forward {begin "board_tank_right"} {end "seat_armor"} {base "board"}}
      {reverse {end "emit_tank_2_hold"}{base "board"}}
    }
  }

  {Extender "enumerator"
    {digit_folder "ger"}
  }

  {Sensor
    {Visor "around"
      {Vision "standard-vision-around"}
    }
  }

  {Extender "detail"
    {random 0}
    {detail1}
    {detail2}
    {detail3}
  }

  {Extender "inventory"
    {Box
      {Size 10 7}
      {Weight 1000}
      {Item "repair_kit" 10}

      {Item "ammo ger-105l28 aphe"  7}
      {Item "ammo ger-105l28 heat"  5}
      {Item "ammo ger-105l28 he"   19}
    }
  }

  {Weaponry
    {RestoreIKTime 5}
    {Place "gun"
      {RestoreIKAfterAim}
      {Weapon "weapon ger-105mm-lefh18-l28" filling "ammo ger-105l28 he" 1}
      {Gunner "gunner"}
      {Charger "charger"}
      {Rotate}
      {AccuracyByMotion
        {MaxLinearSpeed  7.00} ; km/h
        {ByLinearSpeed   0.25} ; km/h
        {MaxAngularSpeed 3.00} ; deg/s
        {ByAngularSpeed  0.35} ; deg/s
        {DisorderTime    0.90} ; s
        {OrderTime       5.00} ; s
      }
    }
  }

  {Mass 11000}
  {Chassis "track"
    ("set-tank-trace" fx("tracks_sm2") step(0.2) length(-0.47) boneleft("FXtraceL1") boneright("FXtraceR1"))
    ("set-maneuverability-of-tank" speed(40) power(140) mass(11000) performance(1.30))
    ("set-fuel-bag" volume(200) power(140))
  }

  {Bone "gun_rot"
    {limits -5 42}
    {speed2 10}
  }
  {Bone "turret"
    {limits -20 20}
    {speed2 8}
  }

}
