{game_entity

  (include "/properties/standard/vehicle/tank-assaultgun-config.ext")
  (include "/properties/selection/vehicle_elongated.inc" scale(1.15))

  {Extension "marder3m.mdl"}
  (include   "marder3m.ext")
  (include   "crew-and-seat.ext")

  {Props "td" "light" "-turret" "mantlet" "vision_lev03" "muzzle_75mm_76mm_sides" "shell_eject" "shield" "open_top" "detect_td_medium"}

  {PatherId "panzer38"}
  {Targetclass "tank_medium"}
  {TargetSelector "tank_medium"}
  {Collider "tank.light"}

  {Boarder
    {anm "driver"
      {forward {begin "board_t26_driver"} {end "pose_t26_driver"} {base "open_driver"}}
      {reverse {end "board_t26_driver" -1} {base "open_driver" -1}}
    }
    {anm "left"
      {forward {begin "board_tank_left"} {end "seat_armor"}}
      {reverse {end "emit_tank_1"}}
    }
    {anm "right"
      {forward {begin "board_tank_right"} {end "seat_armor"}}
      {reverse {end "emit_tank_2_hold"}}
    }
  }

  {Extender "enumerator"
    {digit_folder "ger"}
  }

  {Sensor
    {Visor "around"
      {Vision "standard-vision-around"}
    }
  }

  {Extender "detail"
    {random 0}
    {detail1}
    {detail2}
    {detail3}
    {detail4}
    {detail5}
    {detail6}
    {detail7}
    {detail8}
    {detail9}
    {detail10}
  }

  {Extender "shield" {on}}

  {Extender "inventory"
    {Box
      {Size 10 7}
      {Weight 1000}
      {Item "repair_kit" 10}

      {Item "ammo ger-75l43 apcbche" 19}
      {Item "ammo ger-75l43 apcr"     5}
      {Item "ammo ger-75l43 heat"     5}
      {Item "ammo ger-75l43 he"      19}
    }
  }

  {Weaponry
    {RestoreIKTime 9}
    {Place "gun"
      {RestoreIKAfterAim}
      {Weapon "weapon ger-75mm-pak40-l46" filling "ammo ger-75l43 apcbche" 1}
      {Gunner "gunner"}
      {Charger "charger"}
      {Rotate}
      {AccuracyByMotion
        {MaxLinearSpeed  7.00} ; km/h
        {ByLinearSpeed   0.25} ; km/h
        {MaxAngularSpeed 3.00} ; deg/s
        {ByAngularSpeed  0.35} ; deg/s
        {DisorderTime    0.25} ; s
        {OrderTime       2.00} ; s
      }
    }
  }

  {Mass 11000}
  {Chassis "track"
    ("set-tank-trace" fx("tracks_sm2") step(0.2) length(0.55) boneleft("FXtraceL1") boneright("FXtraceR1"))
    ("set-maneuverability-of-tank" speed(47) power(150) mass(11000) performance(1.36))
    ("set-fuel-tank" volume(218) power(150))
  }

  {Bone "gun_rot"
    {limits -8 16}
    {speed2 10}
  }
  {Bone "turret"
    {limits -25 25}
    {speed2 8}
  }

}
