{game_entity

  (include "/properties/standard/vehicle/tank-assaultgun-config.ext")
  (include "/properties/selection/vehicle_elongated.inc" scale(1.1))

  {Extension "grille_k.mdl"}
  (include   "grille_k.ext")
  (include   "crew-and-seat.ext")

  {Props "spg" "light" "-turret" "mantlet" "multi_board"  "vision_lev04" "muzzle_150mm_155mm" "shield" "open_top" "detect_spg" "artillery_minimap_heavy"}

  {PatherId "panzer38"}
  {Targetclass "tank_medium"}
  {TargetSelector "tank_medium"}
  {Collider "tank.light"}

  {Boarder
    {anm "driver"
      {forward {begin "board_t26_driver"} {end "pose_t26_driver"} {base "open_driver"}}
      {reverse {end "board_t26_driver" -1} {base "open_driver" -1}}
    }
    {anm "left"
      {forward {begin "board_tank_left"} {end "seat_armor"} {base "board"}}
      {reverse {end "emit_tank_1"} {base "board"}}
    }
    {anm "right"
      {forward {begin "board_tank_right"} {end "seat_armor"} {base "board"}}
      {reverse {end "emit_tank_2_hold"} {base "board"}}
    }
  }

  {Extender "enumerator"
    {digit_folder "ger"}
  }

  {Sensor
    {Visor "around"
      {Vision "standard-vision-around"}
    }
  }

  {Extender "shield" {on}}

  {Extender "inventory"
    {Box
      {Size 10 7}
      {Weight 1000}
      {Item "repair_kit" 10}

      {Item "ammo ger-150l11 heat" 2}
      {Item "ammo ger-150l11 he"   9}
    }
  }

  {Weaponry
    {RestoreIKTime 5}
    {place "gun"
      {RestoreIKAfterAim}
      {Weapon "weapon ger-150mm-sig33-l11" filling "ammo ger-150l11 he" 1}
      {Gunner "gunner"}
      {Charger "charger"}
      {AccuracyByMotion
        {MaxLinearSpeed  7.00} ; km/h
        {ByLinearSpeed   0.25} ; km/h
        {MaxAngularSpeed 3.00} ; deg/s
        {ByAngularSpeed  0.35} ; deg/s
        {DisorderTime    0.25} ; s
        {OrderTime       2.00} ; s
      }
    }
  }

  {Mass 11500}
  {Chassis "track"
    ("set-tank-trace" fx("tracks_sm2") step(0.2) length(0.55) boneleft("FXtraceL1") boneright("FXtraceR1"))
    ("set-maneuverability-of-tank" speed(47) power(150) mass(11000) performance(1.38))
    ("set-fuel-tank" volume(218) power(150))
  }

  {Bone "foresight1"
    {limits -5 5}
    {speed2 4}
  }
  {Bone "gun_rot"
    {limits -3 72}
    {speed2 10}
  }
  {Bone "basis"
    {speed2 2}
  }

}
