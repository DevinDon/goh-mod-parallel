      {Weapon "weapon ger-88mm-kwk43-l71" filling "ammo ger-88l71 apcbche" 1}
      {Gunner "gunner"}
      {Charger "charger"}
      {AccuracyByMotion
        {MaxLinearSpeed  7.00} ; km/h
        {ByLinearSpeed   0.25} ; km/h
        {MaxAngularSpeed 3.00} ; deg/s
        {ByAngularSpeed  0.35} ; deg/s
        {DisorderTime    0.25} ; s
        {OrderTime       2.00} ; s
