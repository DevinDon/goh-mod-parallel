{game_entity

  (include "/properties/standard/vehicle/tank-config.ext")
  (include "/properties/selection/vehicle_big.inc" scale(1.0))

  {Extension "tiger2p.mdl"}
  (include   "tiger2p.ext")
  (include   "crew-and-seat.ext")

  {Props "heavy" "vision_lev05" "muzzle_85mm_93mm_sides" "shield" "smoke" "nvw" "detect_tank_heavy"}

  {PatherId "tiger2"}
  {Targetclass "tank_heavy"}
  {TargetSelector "tank_heavy"}
  {collider "tank.heavy"}

  {Extender "enumerator"
    {digit_folder "ger"}
  }

  {Sensor
    {Visor "main"
      {Vision "standard-vision-narrow"}
    }
  }

  {Boarder
    {anm "driver"
      {forward {begin "board_pz4_driver"} {end "seat_gunner_stand"} {base "open_driver"}}
      {reverse {end "board_pz4_driver" -1} {base "open_driver" -1}}
    }
    {anm "left"
      {forward {begin "board_Kv"} {end "pose_mgun_pz6"}}
      {reverse {end "emit_tank_2_hold"}}
    }
    {anm "right"
      {forward {begin "board_tank_right"} {end "pose_mgun_pz6"}}
      {reverse {end "emit_tank_2_hold"}}
    }
    {anm "armor"
      {forward {begin "board_HighArmor"} {end "pose_seat_armor_1"}}
      {reverse {end "emit_tank_1"}}
    }
  }

  {Extender "detail"
    {random 0}
    {detail11}
    {detail12}
    {detail13}
    {detail14}
    {detail15}
    {detail16}
    {detail17}
    {detail18}
    {detail31}
