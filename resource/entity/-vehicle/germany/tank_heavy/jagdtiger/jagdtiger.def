{game_entity

  (include "/properties/standard/vehicle/tank-assaultgun-config.ext")
  (include "/properties/selection/vehicle_big.inc" scale(1.0))

  {Extension "jagdtiger.mdl"}
  (include   "jagdtiger.ext")
  (include   "crew-and-seat.ext")

  {Props "heavy" "td" "-turret" "vision_lev05" "muzzle_122mm_128mm" "shield" "smoke" "nvw" "detect_td_heavy"}

  {PatherId "tiger2"}
  {Targetclass "tank_heavy"}
  {TargetSelector "tank_heavy"}
  {Collider "tank.heavy"}

  {Extender "enumerator"
    {digit_folder "ger"}
  }

  {Sensor
    {Visor "main"
      {Vision "standard-vision-narrow"}
    }
  }

  {Boarder
    {anm "driver"
      {forward {begin "board_pz4_driver"} {end "pose_jagdtiger_aa"} {base "open_driver"}}
      {reverse {end "board_pz4_driver" -1} {base "open_driver" -1}}
    }
    {anm "left"
      {forward {begin "board_Kv"} {end "pose_jagdtiger_aa"}}
      {reverse {end "emit_tank_2_hold"}}
    }
    {anm "right"
      {forward {begin "board_tank_right"} {end "pose_jagdtiger_aa"}}
      {reverse {end "emit_tank_2_hold"}}
    }
    {anm "armor"
      {forward {begin "board_HighArmor"} {end "pose_seat_armor_1"}}
      {reverse {end "emit_tank_1"}}
    }
  }

  {Extender "detail"
    {random 0}
    {detail1}
    {detail2}
    {detail3}
    {detail4}
    {detail5}
    {detail6}
    {detail7}
    {detail8}
    {detail9}
    {detail10}
    {detail11}
    {detail12}
    {detail13}
  }

  {Extender "shield" {on}}

  {Extender "smokescreen"
    {cooldown 5}
    {itemTags "grenade nbks"}
  }

  {Extender "inventory"
    {Weapon "mgun" {mask "mountable"}}
    {Box
      {Size 12 16}
      {Weight 1000}
      {Item "repair_kit" 10}

      {item "ammo ger-128 apcbche" 19}
      {item "ammo ger-128 he" 19}

      {Item "ammo ger-mgun" 4500}
      {Item "weapon ger-mg42" filled {user "mgun"}}

      {item "nbks grenade" 20}
    }
  }

  {Weaponry
    {RestoreIKTime 4}
    {Place "gun"
      {RestoreIKAfterAim}
      {Weapon "weapon ger-128mm-pak44-l61" filling "ammo ger-128 apcbche" 1}
      {Gunner "gunner"}
      {Charger "charger"}
      {AccuracyByMotion
        {MaxLinearSpeed  7.00} ; km/h
        {ByLinearSpeed   0.25} ; km/h
        {MaxAngularSpeed 3.00} ; deg/s
        {ByAngularSpeed  0.35} ; deg/s
        {DisorderTime    0.25} ; s
        {OrderTime       2.00} ; s
      }
    }
    {Place "mgun1"
      {Type "hull"}
      {Weapon "weapon ger-mg42" filled}
      {Foresight "foresight4"}
      {Gunner "gunner3"}
      {Charger "gunner3"}
      {Basic}
      {ai_in_manual}
      {AccuracyByMotion
        {MaxLinearSpeed   8.00} ; km/h
        {ByLinearSpeed    0.40} ; km/h
        {MaxAngularSpeed 30.00} ; deg/s
        {ByAngularSpeed   0.50} ; deg/s
        {DisorderTime     0.60} ; s
        {OrderTime        1.00} ; s
      }
    }
    {Place "mgun"
      {Type "aa"}
      {Gunner "charger2"}
      {Charger "charger2"}
      {LinkBone "mgun_rot"}
      {LinkAnimation "off"}
      {Basic}
      {ai_in_manual}
      {AccuracyByMotion
        {MaxLinearSpeed   8.00} ; km/h
        {ByLinearSpeed    0.40} ; km/h
        {MaxAngularSpeed 30.00} ; deg/s
        {ByAngularSpeed   0.50} ; deg/s
        {DisorderTime     0.60} ; s
        {OrderTime        1.00} ; s
      }
    }
  }

  {Mass 75500}
  {Chassis "track"
    ("set-tank-trace" fx("tracks_big") step(0.47) length(1.19) boneleft("FXtraceL1") boneright("FXtraceR1"))
    ("set-maneuverability-of-tank" speed(35) power(700) mass(75500) performance(1.2))
    ("set-fuel-tank" volume(860) power(700))
  }

  {Bone "gun_rot"
    {limits -7 15}
    {speed2 2}
  }
  {Bone "turret"
    {limits -10 10}
    {speed2 4.5}
  }
  {Bone "mgun_a_rot1"
    {speed2 60}
  }
  {Bone "mgun_a_rot2"
    {speed2 60}
  }

}
