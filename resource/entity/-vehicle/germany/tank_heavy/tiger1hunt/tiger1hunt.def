{game_entity

  (include "/properties/standard/vehicle/tank-config.ext")
  (include "/properties/selection/vehicle_big.inc" scale(0.9))

  {Extension "tiger1hunt.mdl"}
  (include   "tiger1hunt.ext")
  (include   "crew-and-seat.ext")

  {Props "heavy" "vision_lev05" "muzzle_85mm_93mm_sides" "shield" "smoke" "nvw" "detect_tank_heavy"}

  {PatherId "tiger"}
  {Targetclass "tank_heavy"}
  {TargetSelector "tank_heavy"}
  {Collider "tank.heavy"}

  {Extender "enumerator"
    {digit_folder "ger"}
  }

  {Sensor
    {Visor "main"
      {Vision "standard-vision-wide"}
    }
  }

  {Boarder
    {anm "driver"
      {forward {begin "board_pz4_driver"} {end "seat_gunner_stand"} {base "open_driver"}}
      {reverse {end "board_pz4_driver" -1} {base "open_driver" -1}}
    }
    {anm "left"
      {forward {begin "board_pz-6"} {end "pose_mgun_pz6"}}
      {reverse {end "emit_tank_2_hold"}}
    }
    {anm "right"
      {forward {begin "board_pz-6"} {end "pose_mgun_pz6"}}
      {reverse {end "emit_tank_2_hold"}}
    }
    {anm "armor"
      {forward {begin "board_HighArmor"} {end "pose_seat_armor_1"}}
      {reverse {end "emit_tank_1"}}
    }
  }

  {Extender "detail"
    {random 0}
    {detail2}
    {detail1}
    {detail8}
    {detail4}
    {detail5}
    {detail6}
    {detail3}
    {detail14}
    {detail9}
    {detail10}
    {detail12}
    {detail11}
    {detail13}
    {detail7}
    {detail15 0}
    {detail16 0}
    {detail17 0}
    {detail18 0}
  }

  {Extender "shield" {on}}

  {Extender "smokescreen"
    {cooldown 5}
    {itemTags "grenade nbks"}
  }

  {Extender "inventory"
    {Weapon "mgun" {mask "mountable"}}
    {Box
      {Size 14 10}
      {Weight 1000}
      {Item "repair_kit" 10}

      {Item "ammo ger-mgun" 4500}
      {Item "weapon ger-mg42" filled {user "mgun"}}

      {Item "nbks grenade" 2}

      {Item "ammo ger-88l56 apcbche" 39}
      {Item "ammo ger-88l56 apcr" 15}
      {Item "ammo ger-88l56 he" 39}
    }
  }

  {Weaponry
    {RestoreIKTime 3}
    {Place "gun"
      {RestoreIKAfterAim}
      {Weapon "weapon ger-88mm-kwk36-l56-ace" filling "ammo ger-88l56 apcbche" 1}
      {Gunner "gunner"}
      {Charger "charger"}
      {AccuracyByMotion
        {MaxLinearSpeed  9.00} ; km/h
        {ByLinearSpeed   0.50} ; km/h
        {MaxAngularSpeed 5.00} ; deg/s
        {ByAngularSpeed  0.50} ; deg/s
        {DisorderTime    0.15} ; s
        {OrderTime       0.75} ; s
      }
    }
    {Place "mgun2"
      {Type "coaxial"}
      {Weapon "weapon ger-mg42" filled}
      {Foresight "foresight5"}
      {Gunner "gunner"}
      {Charger "charger"}
      {Basic}
      {AccuracyByMotion
        {MaxLinearSpeed   8.00} ; km/h
        {ByLinearSpeed    0.40} ; km/h
        {MaxAngularSpeed 30.00} ; deg/s
        {ByAngularSpeed   0.50} ; deg/s
        {DisorderTime     0.50} ; s
        {OrderTime        1.00} ; s
      }
    }
    {Place "mgun1"
      {Type "hull"}
      {Weapon "weapon ger-mg42" filled}
      {Foresight "foresight4"}
      {Gunner "gunner3"}
      {Charger "gunner3"}
      {Basic}
      {ai_in_manual}
      {AccuracyByMotion
        {MaxLinearSpeed   8.00} ; km/h
        {ByLinearSpeed    0.40} ; km/h
        {MaxAngularSpeed 30.00} ; deg/s
        {ByAngularSpeed   0.50} ; deg/s
        {DisorderTime     0.50} ; s
        {OrderTime        1.00} ; s
      }
    }
    {Place "mgun"
      {Type "aa"}
      {Gunner "commander"}
      {Charger "commander"}
      {LinkBone "mgun_rot"}
      {LinkAnimation "off"}
      {Basic}
      {ai_in_manual}
      {AccuracyByMotion
        {MaxLinearSpeed   8.00} ; km/h
        {ByLinearSpeed    0.40} ; km/h
        {MaxAngularSpeed 30.00} ; deg/s
        {ByAngularSpeed   0.50} ; deg/s
        {DisorderTime     0.50} ; s
        {OrderTime        1.00} ; s
      }
    }
  }

  {Mass 57000}
  {Chassis "track"
    ("set-tank-trace" fx("tracks_big") step(0.47) length(0.91) boneleft("FXtraceL1") boneright("FXtraceR1"))
    ("set-maneuverability-of-tank" speed(38) power(700) mass(57000) performance(1.5))
    ("set-fuel-tank" volume(540) power(700))
  }

  {Bone "gun_rot"
    {limits -8 15}
    {speed2 4}
  }
  {Bone "turret"
    {speed2 9}
  }

