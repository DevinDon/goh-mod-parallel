; set crews
; crew commander
{Placer
  {Place "commander"
    {group "crew"}
    {linkbone "commander"}
    ; no turnoff
    {visor "standard-visor-commander"}
    {openForCrush}
  }
}
{Boarder
  {door "emit4"}
  {link "emit4" "commander" {anm "commander"} {forward putoff} {reverse puton}}
