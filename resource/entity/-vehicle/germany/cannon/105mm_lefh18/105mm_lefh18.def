{game_entity

  (include "/properties/standard/vehicle/cannon-config.ext")
  (include "/properties/selection/cannon_elongated.inc" scale(1.2))

  {Extension "105mm_lefh18.mdl"}
  (include   "105mm_lefh18.ext")
  (include   "crew-and-seat.ext")

  {Props "wheeled" "vision_lev05_can" "muzzle_100mm_105mm" "cannon_sandbag_standard" "trailer" "trailer_medium" "detect_artillery" "artillery_minimap_medium" "c_gun_med"}

  {PatherId "cannon.medium"}
  {Targetclass "howitzer"}
  {TargetSelector "cannon_howitzer"}

  {Extender "cannon"
    {animation
      {switch "close"}
      ;// "gunner" "charger" "charger2" "commander"
      {move "cannon_pak40_pusher_left" "cannon_pak40_pusher_right" "mgun_browning_driver_l" "mgun_browning_driver_r"}
      {aim "cannon_m5_gunlayer" "" "" ""}
      {fire "cannon_gunlayer_fire-alert" "cannon_pdr25_charger_fire" "" ""}
      {reload "" "cannon_pdr25_charger" "" ""}
    }
    {move {workers "driver1" "driver2" "driver3" "driver4" minWorkers 2} {obstacle "close"}} ;// move state: cannon being pushed and which positions play animations
    {attack {workers "gunner""charger" "charger2" "commander"} {obstacle "open"}} ;// fire/attack state: cannon aim, fire, and reload events
    {trailing {workers "seat1" "seat2" "seat3" "seat4"}} ;// trailing state: cannon is being towed {obstacle} not needed. Uses "close"
  }

  {Extender "inventory"
    {Box
      {Size 12 10}
      {Weight 1000}
      {Item "repair_kit" 10}

      {item "sandbag_vehicle" 1}

      {Item "ammo ger-105l28 he"   29}
    }
  }

  {Weaponry
    {RestoreIKTime 10}
    {Place "gun"
      {RestoreIKAfterAim}
      {Weapon "weapon ger-105mm-lefh18-l28" filling "ammo ger-105l28 he" 1}
      {Charger "charger charger2" minWorkers 1}
      {AccuracyByMotion
        {MaxLinearSpeed  7.00} ; km/h
        {ByLinearSpeed   0.25} ; km/h
        {MaxAngularSpeed 3.00} ; deg/s
        {ByAngularSpeed  0.35} ; deg/s
        {DisorderTime    0.95} ; s
        {OrderTime       5.25} ; s
      }
    }
  }

  {Mass 1985}
  {Chassis "track"
    ("set-car-trace" fx("tracewheel06")  step(0.14) wheelleft("wlf") wheelright("wrf") boneleft("FXtraceL1") boneright("FXtraceR1"))
    ("set-maneuverability-of-cannon" speed(7) mass(1985))
  }

  {Bone "basis"
    {speed2 3}
  }
  {Bone "gun_rot"
    {limits -6 40}
    {speed2 5}
  }
  {Bone "turret"
    {limits -28 28}
    {speed2 5}
  }

}
