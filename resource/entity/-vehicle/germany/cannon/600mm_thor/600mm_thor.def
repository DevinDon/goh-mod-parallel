{game_entity

  (include "/properties/standard/vehicle/tank-config.ext")
  (include "/properties/selection/vehicle_big.inc" scale(1.25))

  {Extension "600mm_thor.mdl"}
  (include   "600mm_thor.ext")
  (include   "crew-and-seat.ext")

  {Props "with_gun" "cannon" "heavy" "-hatch" "-engine" "motorized" "vision_lev05_can" "muzzle_600mm" "no_sandbags" "no_shell" "detect_artillery" "artillery_minimap_heavy" "c_how_s_hvy"}

  {PatherId "thor"}
  {Targetclass "howitzer"}
  {TargetSelector "cannon_howitzer"}

  {Extender "cannon"
    {animation
      {switch "close"}
      ;// "gunner" "gunner2" "charger" "charger2" "commander"
      {move "" "" "" "" ""}
      {aim "thor_gunner_animation" "thor_gunner2_animation" "" "" ""}
      {fire "" "" "" "" ""}
      {reload "thor_gunner_reload_animation" "thor_gunner2_reload_animation" "thor_charger_animation" "thor_charger2_animation" ""}
    }
    {move {workers "driver1" "driver2" "driver3" "driver4" "driver5" minWorkers 1} {obstacle "close"}}  ;// move state: cannon being pushed and which positions play animations
    {attack {workers "gunner" "gunner2" "charger" "charger2" "commander"} {obstacle "open"}}      ;// fire/attack state: cannon aim, fire, and reload events
  }

  {Extender "inventory"
    {Box
      {Size 12 10}
      {Weight 1000}
      {Item "repair_kit" 10}

      {Item "ammo ger-600l8 he" 1}
    }
  }

  {Weaponry
    {RestoreIKTime 5}
    {Place "gun"
      {RestoreIKAfterAim}
      {Weapon "weapon ger-600mm-karl-l8" filling "ammo ger-600l8 he" 1}
      {Basic}
      {Rotate}
      {AccuracyByMotion
        {MaxLinearSpeed  7.00} ; km/h
        {ByLinearSpeed   0.25} ; km/h
        {MaxAngularSpeed 3.00} ; deg/s
        {ByAngularSpeed  0.35} ; deg/s
        {DisorderTime    1.55} ; s
        {OrderTime      12.75} ; s
      }
    }
  }

  {Mass 124000}
  {Chassis "track"
    ("set-tank-trace" fx("tracks_big") step(0.47) length(0.91) boneleft("FXtraceL1") boneright("FXtraceR1"))
    ("set-maneuverability-of-tank" speed(10) power(600) mass(124000) performance(1.15))
    ("set-fuel-bag" volume(1200) power(600) mass(124000))
  }

  {Bone "basis"
    {speed2 2}
  }
  {Bone "foresight1"
    {limits -10 90}
    {speed2 3}
  }

  (mod "mp"
    {brain
      {properties
        {fire_mode hold}
      }
    }
  )

}
