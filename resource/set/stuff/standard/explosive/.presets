; standard explosive presets
; define he_level_1
; args = weight filler
(define "set-explosive"
  {Mass %weight}
  {damage blastwave
    {energy (* 10 %filler)}
    {area 0.2 0.5}
    {ground_interaction_radius 0.25}
  }
  {damage add blastwave
    {energy (+ (/ %weight 9) (+ 0.15 %filler))}
    {area (* 0.5 (+ (/ %weight 10) (* 2 (+ %filler 0.25)))) (+ (/ %weight 10) (* 2 (+ %filler 0.25)))}
    {ground_interaction_radius 0.05}
  }
  {damage add blastwave
    {energy (* 0.05 %filler)}
    {area (+ (/ %weight 4) (+ 1 (* 5 %filler))) (+ (* %weight 0.5) (+ 4.5 (* 5 %filler)))}
    {ground_interaction_radius 0}
  }
  {PossibleDamageRadius (* 2 %filler)}
)

; standard bomb presets
; Fill mass 100kg +
; define he_level_7
; args = weight filler
(define "set-bomb"
  {damage blastwave
    {energy (* %filler 0.65)}
    {area (+ 2 (/ %filler 100)) (+ 4 (/ %filler 50))}
    {ground_interaction_radius 0.8}
  }
  {damage add blastwave
    {energy (+ (* %weight 0.005) (+ 4 (* 0.085 %filler)))}
    {area (+ (* %weight 0.005) (+ 5 (* 0.055 %filler)))      (+ (* %weight 0.005) (+ 14 (* 0.054 %filler)))}
    {ground_interaction_radius 0}    ;// value is multiplied by 2nd value of area to deterimine is blast is close enough to ground to trigger terrain fx
  }
  {damage add blastwave
    {energy (+ 0.75 (- 1 (/ %filler %weight)))}
    {area (+ (* %weight 0.005) (+ 11 (* 0.095 %filler)))    (+ (* %weight 0.005) (+ 20 (* 0.1 %filler)))}
    {ground_interaction_radius 0}    ;// value is multiplied by 2nd value of area to deterimine is blast is close enough to ground to trigger terrain fx
  }
)
