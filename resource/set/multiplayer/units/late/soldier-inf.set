; 步兵排
; args = name period doctrine cd ci crew1 crew2 group button tags
(define "set-soldier-platoon"
  {"%name(inf)"
    {charge
      {delay %cd}
      {interval %ci}
    }
    {content "mp/inf/%period/%crew1 mp/inf/%period/%crew2"}
    {tags "all infantry inf %tags %period"}
    {group "%group"}
    {button "%button"}
    {doctrine %doctrine}
    {level 1}
    {squad_cost_factor 1}
    {round_multiple 1}
  }
)

; 步兵排 8 至 12 人
("set-soldier-platoon" name(soldier-antitank-platoon) period(late) doctrine(ascension_inf_tank) cd(0) ci(60) crew1(antitank-1:4) crew2(antitank-2:8) group(platoon) button(inf1) tags())
("set-soldier-platoon" name(soldier-engineer-platoon) period(late) doctrine(ascension_inf_tank) cd(0) ci(60) crew1(engineer-1:4) crew2(engineer-2:8) group(platoon) button(inf1) tags(engineer))
("set-soldier-platoon" name(soldier-mgun-platoon)     period(late) doctrine(ascension_inf_tank) cd(0) ci(60) crew1(mgun-1:4)     crew2(mgun-2:8)     group(platoon) button(inf1) tags())

