(define "set-standard-doctrine-vehicle"
  {level 1}
  {research_stage 1}
  {squad_cost_factor 0}
  {tags "all doctrine inf %period"}
  {button "doctrine"}
  {content "%vehicle ( mp/inf/%period/%crew1 mp/inf/%period/%crew2 )"}
)

; args = doctrine cost
