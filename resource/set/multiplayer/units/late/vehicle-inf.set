; 通用载具
; define from vehicle2
; args = vehicle cost cd ci cw cp tags period crew1 crew2 group button
(define "set-standard-vehicle"
  {charge
    {delay %cd}
    {interval %ci}
  }
  {tags "all %tags inf %period"}
  {cost %cost}
  {group "%group"}
  {button "%button"}
  {score (* %cost 0.05)}
  {cw %cw}
  {cp %cp}
  {content "%vehicle ( mp/inf/%period/%crew1 mp/inf/%period/%crew2 )"}
  {squad_cost_factor 1}
  {round_multiple 5.0}
)

{"tank-e-25"
  ("set-standard-vehicle" vehicle(tank-e-25) cost(500)  cd(300)  ci(120) cw(4) cp(0) tags(light)  period(late) crew1(engineer-1:1) crew2(engineer-2:3) group(light3)  button(tanks))
}

{"tank-e-50"
  ("set-standard-vehicle" vehicle(tank-e-50) cost(1000) cd(600)  ci(240) cw(6) cp(0) tags(medium) period(late) crew1(engineer-1:1) crew2(engineer-2:4) group(medium3) button(tanks))
}

{"tank-e-75"
  ("set-standard-vehicle" vehicle(tank-e-75) cost(1500) cd(1000) ci(480) cw(8) cp(0) tags(heavy)  period(late) crew1(engineer-1:1) crew2(engineer-2:4) group(heavy2)  button(tanks))
}

